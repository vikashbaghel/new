<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="12dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            android:layout_weight=".6">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_product_img"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:shadowColor="#00000029"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp" />

        <TextView
            android:id="@+id/txv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:shadowColor="#00000029"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp" />

        <LinearLayout
            android:weightSum="1.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txv_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/size_10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_10dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_product_like"/>

                <TextView
                    android:id="@+id/txv_total_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_10dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:src="@drawable/ic_product_viewed" />

                <TextView
                    android:id="@+id/txv_total_viewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>