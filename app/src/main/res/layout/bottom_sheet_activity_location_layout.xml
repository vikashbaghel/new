<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_location_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_bg"
    android:elevation="@dimen/dimen_20dp"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <View
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/size_10sp"
        android:background="@drawable/gray_top_corner_10dp_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="@dimen/size_10sp"
        android:text="@string/activity_location"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <ImageView
        android:id="@+id/iv_live_location_track"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/gray_stroke_10dp_gray_backround"
        android:padding="@dimen/dimen_6dp"
        android:src="@drawable/ic_live_location_points"
        app:layout_constraintBottom_toBottomOf="@+id/tv_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_fake_location_detected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16sp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@drawable/fake_location_20dp_empty_bg"
        android:drawablePadding="@dimen/dimen_6dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:text="@string/fake_location_detected"
        android:textColor="@color/C26921_color"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fake_location_detected" />

</androidx.constraintlayout.widget.ConstraintLayout>