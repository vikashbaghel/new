<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_4dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/menu_circle_bg_gray"
        android:elevation="@dimen/dimen_2dp"
        android:translationZ="@dimen/dimen_5dp"
        android:padding="@dimen/dimen_6dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationZ="@dimen/dimen_5dp"
        android:elevation="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginTop="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:background="@drawable/cart_item_bg"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_nano_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="26dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:textColor="@color/chart_grid_color"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@id/view1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_order_total_price"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_nano_id" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="@id/tv_order_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_with_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/with_gst"
            android:textColor="@color/sales_text_color_dark_gray"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_order_total_price"
            app:layout_constraintStart_toStartOf="@id/tv_order_total_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_total_price" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/leve_text_color"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_name" />

        <View
            android:id="@+id/category_view"
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:background="@color/leve_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_category"
            app:layout_constraintStart_toEndOf="@+id/tv_order_category"
            app:layout_constraintTop_toTopOf="@+id/tv_order_category" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_variant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/leve_text_color"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_category"
            app:layout_constraintStart_toEndOf="@+id/category_view"
            app:layout_constraintTop_toTopOf="@+id/tv_order_category" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_variant_name,category_view"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_category"
            app:layout_constraintStart_toEndOf="@+id/tv_order_category"
            app:layout_constraintTop_toTopOf="@+id/tv_order_category" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/buyers_price_colon"
            android:textColor="@color/sales_text_color_dark_gray"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_category" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_discounted_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_price"
            app:layout_constraintStart_toEndOf="@+id/hd_order_price"
            app:layout_constraintTop_toTopOf="@+id/tv_order_price" />

        <View
            android:id="@+id/view_discount"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-5dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_discounted_price"
            app:layout_constraintEnd_toEndOf="@+id/tv_order_discounted_price"
            app:layout_constraintStart_toStartOf="@+id/tv_order_discounted_price"
            app:layout_constraintTop_toTopOf="@+id/tv_order_discounted_price" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_discounted_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_order_discounted_price, view_discount"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_price"
            app:layout_constraintStart_toEndOf="@+id/tv_order_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/hd_order_price"
            app:layout_constraintStart_toEndOf="@+id/tv_order_discounted_price"
            app:layout_constraintTop_toTopOf="@+id/hd_order_price" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_gst_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/sales_text_color_dark_gray"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/hd_order_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_gst_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintBottom_toBottomOf="@+id/hd_gst_heading"
            app:layout_constraintStart_toEndOf="@+id/hd_gst_heading"
            app:layout_constraintTop_toTopOf="@+id/hd_gst_heading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_order_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="7.5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/qty"
            android:textColor="@color/sales_text_color_dark_gray"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/hd_gst_heading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintEnd_toStartOf="@+id/ll_quantity"
            app:layout_constraintStart_toEndOf="@+id/hd_order_qty"
            app:layout_constraintTop_toTopOf="@+id/hd_order_qty" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_out_of_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/out_of_stock"
            android:textColor="@color/delete_discount_red"
            android:textSize="@dimen/size_12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/ll_quantity"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/ll_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="@dimen/dimen_10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_qty"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tv_incremental_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:digits="0123456789."
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:minWidth="@dimen/dimen_50dp"
                android:padding="@dimen/size_12sp"
                android:paddingStart="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingEnd="@dimen/dimen_20dp"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_order_qty"
                app:layout_constraintEnd_toStartOf="@+id/tv_product_unit" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_unit"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingTop="@dimen/dimen_6dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_6dp"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_packaging_level"
                style="@style/SpinnerTheme"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                android:visibility="visible" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_cart_item_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_13sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:background="@drawable/cart_item_discount_bg"
            android:paddingBottom="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_quantity">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hd_apply_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/discount_slash_offer_price"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_discount_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:rotation="270"
                android:src="@drawable/ic_arrow_drop_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_cart_item_discount_choice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_13sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:background="@drawable/cart_item_discount_bg"
            android:paddingBottom="@dimen/size_10sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_quantity">


            <RadioGroup
                android:id="@+id/rg_discount_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_22sp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/rb_discount"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp" />

                <RadioButton
                    android:id="@+id/rb_offer_price"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/offer_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp" />

            </RadioGroup>

            <ImageView
                android:id="@+id/iv_discount_arrow_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:src="@drawable/ic_arrow_drop_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Spinner
                android:id="@+id/spinner_discount_unit"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/size_13sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/cart_item_discount_bg"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_discount_type" />

            <ImageView
                android:id="@+id/iv_discount_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_discount_unit"
                app:layout_constraintEnd_toEndOf="@+id/spinner_discount_unit"
                app:layout_constraintTop_toTopOf="@+id/spinner_discount_unit"
                app:tint="#707070" />

            <EditText
                android:id="@+id/et_discount_value"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:background="@drawable/cart_item_discount_bg"
                android:fontFamily="@font/roboto_medium"
                android:inputType="numberDecimal"
                android:minWidth="80dp"
                android:paddingStart="@dimen/size_10sp"
                android:paddingEnd="@dimen/dimen_20dp"
                android:textColor="#312B81"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_discount_unit"
                app:layout_constraintStart_toEndOf="@+id/spinner_discount_unit"
                app:layout_constraintTop_toTopOf="@+id/spinner_discount_unit" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_discount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginEnd="@dimen/size_10sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_discount_value"
                app:layout_constraintEnd_toEndOf="@+id/et_discount_value"
                app:layout_constraintTop_toTopOf="@+id/et_discount_value" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_choose_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_discount_unit,iv_discount_arrow_gray, et_discount_value, spinner_discount_unit" />


            <EditText
                android:id="@+id/et_offers_price"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/size_13sp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:background="@drawable/cart_item_discount_bg"
                android:drawableStart="@drawable/ic_indian_rupee_symbol"
                android:drawablePadding="@dimen/size_12sp"
                android:fontFamily="@font/roboto_medium"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:minWidth="90dp"
                android:paddingStart="@dimen/size_10sp"
                android:paddingEnd="@dimen/size_10sp"
                android:textColor="#312B81"
                android:textSize="@dimen/size_12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_discount_unit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/spinner_discount_unit" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_apply_discount"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:background="@drawable/cart_item_discount_apply_bg"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:paddingStart="@dimen/size_18sp"
                android:paddingEnd="@dimen/size_18sp"
                android:text="@string/apply"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_discount_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_discount_value" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_cart_item_discount_applied"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:background="@drawable/cart_item_discount_applied_bg"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cl_cart_item_discount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_quantity"
            app:layout_constraintTop_toTopOf="@+id/cl_cart_item_discount">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_applied_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_cancel_discount"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>