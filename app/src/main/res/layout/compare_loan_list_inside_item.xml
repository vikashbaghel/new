<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/calculator_input_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_loan_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/size_12sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight=".1"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight=".1"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="12dp"
                android:text="Loan Amount "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_loan_amount"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_weight=".8"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:paddingTop="@dimen/dimen_5dp"
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@string/rs"
                    android:textColor="@color/white"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="EMI "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/et_emi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="@dimen/dimen_20dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/calculator_input_text_color"
                    android:textSize="@dimen/calculator_input_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@string/rs"
                    android:textColor="@color/white"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Loan Tenure "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_tenure"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_weight=".7"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

                <TextView
                    android:id="@+id/txv_time_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="M"
                    android:visibility="gone"
                    android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/loan_tenure_toggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/loan_tenure_month"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/loan_tenure_year"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Y"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Processing Fee "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_processing_fees"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

            <TextView
                android:id="@+id/txv_processing_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="@string/rs"
                android:visibility="gone"
                android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/processing_toggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/processing_percent"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/processing_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/rs"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Insurance "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_insurance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

                <TextView
                    android:id="@+id/txv_insurance_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@string/rs"
                    android:visibility="gone"
                    android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/insurance_toggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/insurance_percent"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/insurance_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/rs"
                        android:textColor="@color/black" />
                </RadioGroup>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Other Charges "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_other_charge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

            <TextView
                android:id="@+id/txv_othercharge_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="@string/rs"
                android:visibility="gone"
                android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/other_charge_toggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/other_charge_percent"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/other_charge_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/rs"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Advance EMI "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_advance_emi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

            <TextView
                android:id="@+id/txv_advance_emi_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="@string/rs"
                android:visibility="gone"
                android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/advance_emi_toggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/advance_emi_amount"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/rs"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/advance_emi_month"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Deposit "
                android:textAlignment="textStart"
                android:textColor="@color/calculator_level_text_color"
                android:textSize="@dimen/calculator_input_title" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/calculator_input_bg"
                android:orientation="horizontal"
                android:weightSum="1">

            <EditText
                android:id="@+id/et_deposit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/calculator_input_text_color"
                android:textSize="@dimen/calculator_input_text_size" />

            <TextView
                android:id="@+id/txv_deposit_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="@string/rs"
                android:visibility="gone"
                android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/deposit_toggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/deposit_percent"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/deposit_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/rs"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Effective Interest Rate"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_card_style"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="@dimen/dimen_20dp"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_add_cancel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="Cancel"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:id="@+id/txt_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:text="ADD"
                android:textAlignment="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:background="@drawable/active_status_bg_style"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>