<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_1dp"
    android:background="@drawable/white_border_linear_rounded_gradient"
    android:elevation="5dp">


    <com.app.rupyz.generic.custom.VerticalTextView
        android:id="@+id/tv_customer_level"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/order_close_background"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/dimen_5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_customer"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset"
        android:src="@mipmap/ic_no_customer_found"
        app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_13sp"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/dimen_10dp"

        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_more"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toTopOf="@id/iv_customer"
        app:layout_goneMarginEnd="@dimen/size_14sp" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_18sp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/size_18sp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:src="@drawable/ic_icon_ionic_ios_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_authorize_person_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_13sp"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/dimen_10dp"

        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
        app:layout_goneMarginEnd="@dimen/size_14sp" />

    <androidx.appcompat.widget.AppCompatTextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name"
        android:layout_marginBottom="@dimen/dimen_24dp"
        app:layout_constraintStart_toEndOf="@+id/iv_customer" />


    <ImageView
        android:id="@+id/iv_whats_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_14sp"
        android:visibility="gone"
        android:src="@drawable/ic_order_whats_app"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBottomOf="@+id/iv_customer" />

    <ImageView
        android:id="@+id/iv_phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:src="@drawable/ic_order_call"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_authorize_person_name"

        app:layout_constraintTop_toBottomOf="@+id/iv_more" />


    <TextView
        android:id="@+id/tv_parent_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10sp"
        android:layout_marginTop="@dimen/size_10sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/parent_customer_name_color"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer"
        app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_authorize_person_name" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
        app:layout_constraintTop_toBottomOf="@+id/iv_customer" />


