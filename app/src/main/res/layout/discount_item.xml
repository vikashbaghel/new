<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Net Rate:"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_discount_amount"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_discount_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="end"
        android:paddingEnd="16dp"
        android:singleLine="true"
        android:text="@string/rs"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toEndOf="@+id/tv_discount"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pd_view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:visibility="gone"
        android:background="@color/color_DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_discount" />

</androidx.constraintlayout.widget.ConstraintLayout>