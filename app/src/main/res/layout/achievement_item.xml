<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/achievement_card_style"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_user_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:shadowColor="#00000029"
                    android:text="Ascendi"
                    android:textColor="#312B81"
                    android:textSize="@dimen/size_16sp" />

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dimen_8dp"
                    android:src="@drawable/ic_icon_ionic_ios_more" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txv_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Associated with WIMD Technologies"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="June 2019"
                android:textColor="#10A810"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txv_achievement_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Lorem We are Digital marketers with more than 12 years of experience. With 12 years and more than 100 grand successful projects."
                android:textColor="@color/black"
                android:textSize="11sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>