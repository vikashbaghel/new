<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".ui.more.ReportSettingActivity">


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:fontFamily="@font/poppins_semibold"
        android:shadowColor="@color/analytics_view_drop_shadow_color"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/get_report"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_close"
        app:layout_constraintStart_toEndOf="@+id/img_close"
        app:layout_constraintTop_toTopOf="@+id/img_close" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintTop_toBottomOf="@+id/img_close">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="@dimen/size_18sp"
            android:paddingBottom="@dimen/size_15sp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cart_item_bg"
                android:paddingTop="@dimen/size_15sp"
                android:paddingBottom="@dimen/size_15sp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15sp"
                    android:src="@drawable/ic_report_setting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_hierarchy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10sp"
                    android:layout_weight="9"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/report_permission"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv1"
                    app:layout_constraintStart_toEndOf="@+id/iv1"
                    app:layout_constraintTop_toTopOf="@+id/iv1" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_hierarchy_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hierarchy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hierarchy" />


                <TextView
                    android:id="@+id/tv_report_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/size_20sp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:layout_weight="9"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/report_duration"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv1" />

                <Spinner
                    android:id="@+id/spinner_report_duration"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:paddingStart="@dimen/dimen_6dp"
                    android:paddingEnd="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_report_duration" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15sp"
                android:background="@drawable/cart_item_bg"
                android:paddingTop="@dimen/size_15sp"
                android:paddingBottom="@dimen/size_15sp"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15sp"
                    android:src="@drawable/ic_order_whats_app"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_whatsapp_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10sp"
                    android:layout_marginEnd="@dimen/size_12sp"
                    android:layout_weight="9"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/report_whatsapp_number"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv7"
                    app:layout_constraintTop_toTopOf="@+id/iv7" />


                <EditText
                    android:id="@+id/et_whatsapp_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/size_20sp"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start|center_vertical"
                    android:hint="@string/enter_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingEnd="@dimen/size_10sp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#888"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_add_whatsapp_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_whatsapp_number" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_whatsapp_number"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:background="@drawable/add_product_green_btn_gredient"
                    android:text="@string/add"
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/et_whatsapp_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/et_whatsapp_number"
                    app:layout_constraintTop_toTopOf="@+id/et_whatsapp_number" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_whatsapp_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    app:layout_constraintTop_toBottomOf="@+id/et_whatsapp_number" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15sp"
                android:background="@drawable/cart_item_bg"
                android:paddingTop="@dimen/size_15sp"
                android:paddingBottom="@dimen/size_15sp"
                app:layout_constraintTop_toBottomOf="@+id/view2">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15sp"
                    android:src="@drawable/ic_report_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_email_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10sp"
                    android:layout_marginEnd="@dimen/size_12sp"
                    android:layout_weight="9"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/email_id"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv3"
                    app:layout_constraintTop_toTopOf="@+id/iv3" />


                <EditText
                    android:id="@+id/et_email_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/size_20sp"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start|center_vertical"
                    android:hint="@string/enter_email"
                    android:maxLength="40"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingEnd="@dimen/size_10sp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#888"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_add_email_id"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_email_id" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:background="@drawable/add_product_green_btn_gredient"
                    android:text="@string/add"
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/et_email_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/et_email_id"
                    app:layout_constraintTop_toTopOf="@+id/et_email_id" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_email_id" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20sp"
        android:layout_marginEnd="@dimen/size_20sp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/add_product_green_btn_gredient"
        android:text="@string/save"
        android:textSize="@dimen/size_16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

