<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:elevation="2dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_22sp"
        android:background="@drawable/primary_address_background"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/size_16sp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingEnd="@dimen/size_16sp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:text="@string/primary"
        android:textColor="@color/cart_item_text"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/cart_item_bg"
        android:paddingTop="@dimen/dimen_4dp"
        android:elevation="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_primary">

        <ImageView
            android:id="@+id/iv_radio_button"
            android:layout_width="@dimen/size_12sp"
            android:layout_height="@dimen/size_12sp"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginTop="@dimen/size_14sp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:visibility="gone"
            android:src="@drawable/ic_radio_button_not_selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Company name for address"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_edit"
            app:layout_constraintStart_toEndOf="@+id/iv_radio_button"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="full adress for order in respect to the choice of their residence"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_radio_button"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAddNewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_1_5dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_1_5dp"
            android:background="@drawable/address_button_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_20dp"
                android:paddingVertical="@dimen/dimen_12dp"
                android:id="@+id/tvAddNewAddressText"
                android:paddingEnd="@dimen/dimen_20dp"
                android:drawableStart="@drawable/ic_local_shipping_car"
                android:drawablePadding="@dimen/dimen_20dp"
                android:text="@string/select_address"
                android:textAllCaps="false"
                android:background="@color/transparent"
                android:textColor="@color/color_727176"
                android:lineHeight="@dimen/size_18sp"
                android:textSize="@dimen/size_12sp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:padding="@dimen/dimen_8dp"
            android:src="@drawable/ic_more_black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_company_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_company_name"
            app:tint="@color/black" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>