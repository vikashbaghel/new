<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    tools:context=".sales.orders.AllListOfOrdersActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_12sp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:shadowColor="@color/analytics_view_drop_shadow_color"
        android:shadowDx="5"
        android:shadowDy="5"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:shadowRadius="5"
        android:text="@string/orders_list"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:gravity="center"
        android:padding="@dimen/size_10sp"
        android:src="@drawable/ic_filter_gray"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toStartOf="@+id/tv_sort_by"
        app:tint="@color/color_817EB1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_sort_by"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:padding="@dimen/size_10sp"
        android:src="@drawable/ic_sort"
        app:layout_constraintEnd_toStartOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:tint="@color/color_817EB1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_search1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/search"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        android:imeOptions="actionSearch"
        android:paddingStart="44dp"
        android:paddingTop="@dimen/size_10sp"
        android:paddingEnd="@dimen/dimen_50dp"
        android:paddingBottom="@dimen/size_10sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/beat_hint_color"
        android:textSize="@dimen/size_14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="@+id/iv_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/todo"
        android:paddingStart="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/size_10sp"
        android:visibility="gone"
        android:paddingBottom="@dimen/dimen_10dp"
        android:src="@mipmap/ic_search"
        app:layout_constraintBottom_toBottomOf="@+id/et_search1"
        app:layout_constraintStart_toStartOf="@+id/et_search1"
        app:layout_constraintTop_toTopOf="@+id/et_search1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_clear_search"
        android:layout_width="@dimen/size_24sp"
        android:layout_height="@dimen/size_24sp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/size_12sp"
        android:background="@drawable/circle_blue_gradient"
        android:contentDescription="@string/todo"
        android:padding="@dimen/dimen_8dp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_search1"
        app:layout_constraintEnd_toEndOf="@+id/et_search1"
        app:layout_constraintTop_toTopOf="@+id/et_search1"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/et_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:padding="@dimen/size_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:tint="@color/color_817EB1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_filter_count"
        android:layout_width="@dimen/size_18sp"
        android:layout_height="@dimen/size_18sp"
        android:layout_gravity="center"
        android:background="@drawable/circle_red_gradient"
        android:backgroundTint="@color/payment_rejected_text_color"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_1dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_filter"
        app:layout_constraintTop_toTopOf="@+id/tv_filter" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_All_range"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/size_12sp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:drawablePadding="@dimen/dimen_30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/all_order"
        android:padding="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_14sp"
        android:drawableTint="@color/leve_text_color"
        app:drawableEndCompat="@drawable/ic_keyboard_arrow"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:padding="@dimen/size_10sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_calendar_today"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        app:tint="@color/color_817EB1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="1dp"
        android:paddingEnd="@dimen/dimen_20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tv_All_range" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hd_delivery"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_status">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/date_order"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/size_13sp"
            android:id="@+id/tv_date_range"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/size_13sp"
            android:text="@string/date"
            app:layout_constraintStart_toEndOf="@+id/tv_date_range"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/clear"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hd_delivery">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="@dimen/size_16sp"
            android:paddingBottom="@dimen/dimen_100dp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/pagination_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_empty_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back">

        <ImageView
            android:id="@+id/iv_empty_data"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_empty_data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/please_try_another_keyword"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_empty_data" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>