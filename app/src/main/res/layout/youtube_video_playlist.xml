<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/VideoPreviewPlayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_play" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:shadowColor="#00000029"
                android:text="Zero foreclosure charges for MSME - Hindi (English sub-title)"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp" />

            <TextView
                android:id="@+id/txv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="8dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingEnd="8dp"
                android:text="12 Jan 2022"
                android:textColor="#646464 "
                android:textSize="8sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:weightSum="3">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight=".3"
                    android:src="@mipmap/ic_logo" />

                <TextView
                    android:id="@+id/txv_channel_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.4"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:text="Rupyz for MSME"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_10sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:visibility="gone"
                    android:src="@drawable/ic_video_share" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/white" />

</LinearLayout>