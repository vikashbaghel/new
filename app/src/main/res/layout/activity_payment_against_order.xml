<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.orders.PaymentAgainstOrderActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_12sp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="@color/analytics_view_drop_shadow_color"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/checkout"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />

        <ScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="fill_vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_layout"
            app:layout_constraintTop_toBottomOf="@+id/iv_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_100dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clShippingAddressParent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginVertical="@dimen/dimen_16dp"
                    android:elevation="@dimen/dimen_8dp"
                    android:paddingBottom="@dimen/dimen_20dp"
                    android:translationZ="@dimen/dimen_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvShippingAddressLabel"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="top"
                        android:lineHeight="@dimen/size_20sp"
                        android:text="@string/shippingAddress"
                        android:textColor="@color/color_727176"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/defaultAddressCard"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/size_12sp"
                        android:background="@drawable/cart_item_bg"
                        android:elevation="@dimen/dimen_8dp"
                        android:translationZ="@dimen/dimen_8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvShippingAddressLabel">


                        <ImageView
                            android:id="@+id/ivShippingAddressIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:contentDescription="@string/shippingAddress"
                            android:src="@drawable/ic_local_shipping"
                            app:layout_constraintBottom_toBottomOf="@+id/tvDefaultAddressTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvDefaultAddressTitle" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDefaultAddressTitle"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:layout_marginVertical="@dimen/dimen_16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="top"
                            android:lineHeight="@dimen/size_20sp"
                            android:text="@string/shippingAddress"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp"
                            app:layout_constraintEnd_toStartOf="@+id/ivShippingAddressMoreOptions"
                            app:layout_constraintStart_toEndOf="@+id/ivShippingAddressIcon"
                            app:layout_constraintTop_toTopOf="parent"

                            />

                        <ImageView
                            android:id="@+id/ivShippingAddressMoreOptions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:contentDescription="@string/view_more"
                            android:paddingHorizontal="@dimen/dimen_20dp"
                            android:paddingVertical="@dimen/dimen_20dp"
                            android:src="@drawable/ic_more_black"
                            app:layout_constraintBottom_toBottomOf="@+id/tvDefaultAddressTitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvDefaultAddressTitle" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDefaultAddress"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:layout_marginVertical="@dimen/dimen_16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="top"
                            android:lineHeight="@dimen/size_20sp"
                            android:text="@string/shippingAddress"
                            android:textColor="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDefaultAddressTitle" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clAddNewAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_1_5dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_marginBottom="@dimen/dimen_1_5dp"
                            android:background="@drawable/address_button_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDefaultAddress">

                            <View
                                android:id="@+id/divider"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1dp"
                                android:background="@color/color_DDDDDD"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvAddNewAddressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:drawableStart="@drawable/ic_add_gray_circle"
                                android:drawablePadding="@dimen/dimen_20dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center_vertical"
                                android:lineHeight="@dimen/size_18sp"
                                android:paddingVertical="@dimen/dimen_12dp"
                                android:paddingStart="@dimen/dimen_20dp"
                                android:paddingEnd="@dimen/dimen_20dp"
                                android:text="@string/add_another_address"
                                android:textAllCaps="false"
                                android:textColor="@color/color_727176"
                                android:textSize="@dimen/size_12sp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/divider" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/noAddressFound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:constraint_referenced_ids="tvDefaultAddress, ivShippingAddressMoreOptions, ivShippingAddressIcon , tvDefaultAddressTitle " />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSeeAllAddress"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:lineHeight="@dimen/size_20sp"
                        android:text="@string/seeAllAddress"
                        android:textAlignment="center"
                        android:textColor="@color/color_312B81"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/defaultAddressCard" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPurchaseOrderNumber"
                    style="@style/TextInputDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:elevation="@dimen/dimen_12dp"
                    android:textSize="@dimen/size_14sp"
                    android:translationZ="@dimen/dimen_12dp"
                    android:visibility="visible"
                    app:boxBackgroundColor="@color/white"
                    app:hintEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clShippingAddressParent">

                    <EditText
                        android:id="@+id/etPurchaseOrderNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/purchaseOrderNumber"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_727176"
                        android:textSize="@dimen/size_14sp"
                        android:visibility="visible" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hd_payment_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/payment_options"
                    android:textColor="@color/color_727176"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tlPurchaseOrderNumber" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rl_mode_of_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:background="@drawable/cart_item_bg"
                    android:elevation="@dimen/dimen_12dp"
                    android:paddingHorizontal="@dimen/dimen_16dp"
                    android:paddingVertical="@dimen/dimen_16dp"
                    android:translationZ="@dimen/dimen_12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hd_payment_option">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tl_spinner_payment_option"
                        style="@style/TextInputDesign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:elevation="@dimen/dimen_12dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="@dimen/size_14sp"
                        android:translationZ="@dimen/dimen_12dp"
                        android:visibility="visible"
                        app:boxBackgroundColor="@color/white"
                        app:hintEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <EditText
                            android:id="@+id/spinner_payment_option"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/payment_options_mandatory"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            android:visibility="visible" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tl_hd_payment_amount"
                        style="@style/TextInputDesign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:elevation="@dimen/dimen_12dp"
                        android:textSize="@dimen/size_14sp"
                        android:translationZ="@dimen/dimen_12dp"
                        android:visibility="gone"
                        app:boxBackgroundColor="@color/white"
                        app:hintEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tl_spinner_payment_option">

                        <EditText
                            android:id="@+id/et_payment_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/payment_amount_mandatory"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            android:visibility="visible" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tl_spinner_payment_mode"
                        style="@style/TextInputDesign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:elevation="@dimen/dimen_12dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="@dimen/size_14sp"
                        android:translationZ="@dimen/dimen_12dp"
                        android:visibility="gone"
                        app:boxBackgroundColor="@color/white"
                        app:hintEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tl_hd_payment_amount">

                        <EditText
                            android:id="@+id/spinner_payment_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cursorVisible="false"
                            android:enabled="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/payment_mode_mandatory"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            android:visibility="visible" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tl_transaction_ref"
                        style="@style/TextInputDesign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:elevation="@dimen/dimen_12dp"
                        android:textSize="@dimen/size_14sp"
                        android:translationZ="@dimen/dimen_12dp"
                        android:visibility="gone"
                        app:boxBackgroundColor="@color/white"
                        app:hintEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tl_spinner_payment_mode">

                        <EditText
                            android:id="@+id/et_transaction_ref"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/transaction_ref_no"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            android:visibility="visible" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tl_payment_days"
                        style="@style/TextInputDesign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:textSize="@dimen/size_14sp"
                        app:boxBackgroundColor="@color/white"
                        app:hintEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tl_transaction_ref">

                        <EditText
                            android:id="@+id/et_payment_days"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/remaining_payment_after"
                            android:inputType="number"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/color_727176"
                            android:textSize="@dimen/size_14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_days"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_marginTop="@dimen/dimen_7dp"
                        android:layout_marginEnd="@dimen/dimen_1dp"
                        android:layout_marginBottom="@dimen/dimen_1dp"
                        android:background="@drawable/buttons_end_item_bg"
                        android:elevation="@dimen/dimen_1dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/dimen_20dp"
                        android:text="@string/days"
                        android:textColor="@color/color_727176"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tl_payment_days"
                        app:layout_constraintEnd_toEndOf="@+id/tl_payment_days"
                        app:layout_constraintTop_toTopOf="@+id/tl_payment_days" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group_payment_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="tv_days,tl_payment_days"
                        app:layout_constraintTop_toBottomOf="@+id/tl_transaction_ref" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalPaymentAmountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/payment_amount_with_separator"
                        android:textColor="@color/color_727176"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_days" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTotalPaymentAmount"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvTotalPaymentAmountLabel"
                        app:layout_constraintTop_toBottomOf="@+id/tv_days" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clOrderAttachmentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginVertical="@dimen/dimen_16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/cart_item_bg"
                    android:elevation="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_20dp"
                    android:translationZ="@dimen/dimen_12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_mode_of_payment">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/hd_image_upload"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/upload_image_for_order"
                        android:textColor="@color/color_727176"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_50dp"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/hd_image_upload" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivOrderAttachmentHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/orderAttachmentHint"
                        android:textColor="@color/color_727176"
                        android:textSize="@dimen/size_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rv_images" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvExpectedDeliveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/expected_delivery_date"
                    android:textColor="@color/color_727176"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clOrderAttachmentLayout" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiExpectedDeliveryDate"
                    style="@style/TextInputDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:elevation="@dimen/dimen_8dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/size_14sp"
                    android:translationZ="@dimen/dimen_8dp"
                    android:visibility="visible"
                    app:boxBackgroundColor="@color/white"
                    app:endIconCheckable="false"
                    app:endIconDrawable="@drawable/ic_callender"
                    app:endIconMode="custom"
                    app:endIconTint="@null"
                    app:hintEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvExpectedDeliveryDate">

                    <EditText
                        android:id="@+id/etExpectedDeliveryDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/select_date"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_727176"
                        android:textSize="@dimen/size_14sp"
                        android:visibility="visible" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_company_name_hd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/comments"
                    android:textColor="@color/color_727176"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tiExpectedDeliveryDate" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCommentsParentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/size_20sp"
                    android:background="@drawable/cart_item_bg"
                    android:elevation="@dimen/dimen_8dp"
                    android:translationZ="@dimen/dimen_8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_company_name_hd">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clGeneralCommentParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivGeneralComment"
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:contentDescription="@string/comment"
                            android:src="@drawable/ic_write_comment"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCommentsLabel"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/general_comments"
                            android:textColor="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            app:layout_constraintEnd_toStartOf="@+id/ivToggleButtonGeneralComments"
                            app:layout_constraintStart_toEndOf="@+id/ivGeneralComment"
                            app:layout_constraintTop_toTopOf="@+id/ivGeneralComment" />


                        <ImageView
                            android:id="@+id/ivToggleButtonGeneralComments"
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:src="@drawable/ic_add"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ivGeneralComment" />

                        <EditText
                            android:id="@+id/et_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_marginBottom="120dp"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="top"
                            android:lines="10"
                            android:paddingStart="@dimen/size_16sp"
                            android:paddingTop="@dimen/dimen_12dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="@dimen/dimen_20dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/size_16sp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/tvCommentsLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clForAdminCommentParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:paddingVertical="@dimen/dimen_16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clGeneralCommentParent">

                        <ImageView
                            android:id="@+id/ivForAdminComment"
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:contentDescription="@string/comment"
                            android:src="@drawable/ic_write_comment"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvForAdminCommentsLabel"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/forAdmin"
                            android:textColor="@color/color_727176"
                            android:textSize="@dimen/size_14sp"
                            app:layout_constraintEnd_toStartOf="@+id/ivToggleButtonForAdminComments"
                            app:layout_constraintStart_toEndOf="@+id/ivForAdminComment"
                            app:layout_constraintTop_toTopOf="@+id/ivForAdminComment" />


                        <ImageView
                            android:id="@+id/ivToggleButtonForAdminComments"
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:src="@drawable/ic_add"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ivForAdminComment" />

                        <EditText
                            android:id="@+id/et_admin_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="top"
                            android:lines="3"
                            android:paddingStart="@dimen/size_16sp"
                            android:paddingTop="@dimen/dimen_12dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="@dimen/dimen_20dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/size_16sp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/tvForAdminCommentsLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/btn_rectangle_bg_bg"
                android:backgroundTint="#2DAD33"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="@dimen/dimen_40dp"
                android:paddingEnd="@dimen/dimen_40dp"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/btn_cancel"
                app:layout_constraintTop_toTopOf="parent"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/btn_rectangle_bg_bg"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="@dimen/dimen_40dp"
                android:paddingEnd="@dimen/dimen_40dp"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/details_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>