<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.orders.PaymentAgainstOrderActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_12sp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="@color/analytics_view_drop_shadow_color"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/payment_against_order"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />

        <ScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="fill_vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_layout"
            app:layout_constraintTop_toBottomOf="@+id/iv_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hd_payment_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/payment_options"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/rl_mode_of_payment"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    app:layout_constraintTop_toBottomOf="@+id/hd_payment_option">

                    <Spinner
                        android:id="@+id/spinner_payment_option"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dimen_6dp"
                        android:paddingEnd="@dimen/dimen_6dp"
                        android:singleLine="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/hd_payment_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/payment_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_mode_of_payment" />

                <EditText
                    android:id="@+id/et_payment_amount"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingStart="@dimen/size_24sp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/hd_payment_amount" />

                <TextView
                    android:id="@+id/hd_rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/rupee_symbol"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/et_payment_amount"
                    app:layout_constraintStart_toStartOf="@+id/et_payment_amount"
                    app:layout_constraintTop_toTopOf="@+id/et_payment_amount" />

                <TextView
                    android:id="@+id/hd_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/payment_mode_mandatory"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_payment_amount" />

                <RelativeLayout
                    android:id="@+id/rl_payment_mode"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    app:layout_constraintTop_toBottomOf="@+id/hd_payment_mode">

                    <Spinner
                        android:id="@+id/spinner_payment_mode"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingStart="@dimen/dimen_6dp"
                        android:paddingEnd="@dimen/dimen_6dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/hd_ref_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/transaction_ref_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_payment_mode" />

                <EditText
                    android:id="@+id/et_transaction_ref"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/size_16sp"
                    app:layout_constraintTop_toBottomOf="@+id/hd_ref_no" />

                <TextView
                    android:id="@+id/hd_remaining_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/remaining_payment_after"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_transaction_ref" />


                <EditText
                    android:id="@+id/et_payment_days"
                    android:layout_width="160dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:digits="0123456789"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Enter Days"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/size_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hd_remaining_payment" />

                <TextView
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Days"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_payment_days"
                    app:layout_constraintEnd_toEndOf="@+id/et_payment_days"
                    app:layout_constraintTop_toTopOf="@+id/et_payment_days" />

                <TextView
                    android:id="@+id/tv_company_name_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/note_comment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_payment_days" />

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="top"
                    android:lines="10"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="@dimen/dimen_20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/size_16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_company_name_hd" />

                <TextView
                    android:id="@+id/tv_admin_comment_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/note_comment_for_admin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_comment" />

                <EditText
                    android:id="@+id/et_admin_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/edit_text_white_with_stroke_background"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="top"
                    android:lines="3"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="@dimen/dimen_20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/size_16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_admin_comment_hd" />

                <TextView
                    android:id="@+id/hd_image_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/upload_image_for_order"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_admin_comment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:paddingBottom="@dimen/dimen_50dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hd_image_upload" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/btn_rectangle_bg_bg"
                android:backgroundTint="#2DAD33"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="@dimen/dimen_40dp"
                android:paddingEnd="@dimen/dimen_40dp"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/btn_cancel"
                app:layout_constraintTop_toTopOf="parent"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/btn_rectangle_bg_bg"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="@dimen/dimen_40dp"
                android:paddingEnd="@dimen/dimen_40dp"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>