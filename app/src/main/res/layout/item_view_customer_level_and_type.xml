<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.app.rupyz.custom_view.basic.TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/level1"
        android:gravity="center"
        android:singleLine="true"
        android:textAlignment="center"
        app:textViewType="NONE"
        android:maxLines="1"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:paddingHorizontal="@dimen/dimen_6dp"
        android:paddingVertical="@dimen/dimen_14dp"
        android:background="@drawable/selected_customer_level"
        android:textColor="@color/color_322E80"
        android:textSize="@dimen/size_14sp"
        android:text="@string/super_stockist"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/level2"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.app.rupyz.custom_view.basic.TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/level2"
        app:textViewType="NONE"
        android:gravity="center"
        android:singleLine="true"
        android:textAlignment="center"
        android:maxLines="1"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:paddingHorizontal="@dimen/dimen_6dp"
        android:paddingVertical="@dimen/dimen_14dp"
        android:background="@drawable/un_selected_customer_level"
        android:textColor="@color/color_727176"
        android:textSize="@dimen/size_14sp"
        android:text="Distributor"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/level1"
        app:layout_constraintEnd_toStartOf="@+id/level3"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.app.rupyz.custom_view.basic.TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/level3"
        app:textViewType="NONE"
        android:gravity="center"
        android:singleLine="true"
        android:maxLines="1"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:paddingHorizontal="@dimen/dimen_6dp"
        android:paddingVertical="@dimen/dimen_14dp"
        android:background="@drawable/un_selected_customer_level"
        android:textColor="@color/color_727176"
        android:textSize="@dimen/size_14sp"
        android:text="Retailers"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/levelCustomFields"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/level1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>