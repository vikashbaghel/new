<!--        android:id="@+id/rv_New_Unit"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="@dimen/dimen_10dp"-->
<!--        android:clipToPadding="false"-->
<!--        android:foregroundGravity="center"-->
<!--        android:nestedScrollingEnabled="true"-->
<!--        android:layout_marginBottom="@dimen/dimen_20dp"-->
<!--        android:paddingStart="@dimen/dimen_20dp"-->
<!--        android:paddingEnd="20dp"-->
<!--        app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/tv_continue_result">-->

<!--    </androidx.recyclerview.widget.RecyclerView>-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:maxHeight="@dimen/dimen_200dp"
        app:layout_constraintHeight_max="@dimen/dimen_200dp"
        android:id="@+id/chip_group_unit_scroll_parent"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_continue_result">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_unit"
            android:layout_width="match_parent"
            app:flow_wrapMode="aligned"
            android:layout_height="wrap_content"
            />


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tv_continue_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@color/filter_proceed_green"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingEnd="@dimen/dimen_30dp"
        android:text="@string/str_continue"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>