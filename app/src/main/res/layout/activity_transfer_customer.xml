<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.customer.TransferCustomerActivity">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_12sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />


    <TextView
        android:id="@+id/tv_toolbar_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_12sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/sales_text_color_light_black"
        android:textSize="@dimen/size_12sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_toolbar_title" />


    <TextView
        android:id="@+id/tv_transfer_customer_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_toolbar_sub_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_transfer_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_customer_heading">

        <EditText
            android:id="@+id/et_search_customer"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:background="@drawable/white_with_gray_stroke_4dp_background"
            android:drawableStart="@mipmap/ic_search"
            android:drawablePadding="@dimen/dimen_10dp"
            android:fontFamily="@font/poppins_regular"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="60dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="@dimen/size_15sp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_clear_search"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:padding="@dimen/dimen_2dp"
            android:rotation="45"
            android:src="@drawable/nav_add"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_customer"
            app:layout_constraintEnd_toStartOf="@+id/ic_drop_arrow"
            app:layout_constraintTop_toTopOf="@+id/et_search_customer"
            app:tint="@color/lead_add_blue" />

        <ImageView
            android:id="@+id/ic_drop_arrow"
            android:layout_width="@dimen/size_16sp"
            android:layout_height="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:src="@drawable/ic_drop_down_holo"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_customer"
            app:layout_constraintEnd_toEndOf="@+id/et_search_customer"
            app:layout_constraintTop_toTopOf="@+id/et_search_customer"
            app:tint="@color/lead_add_blue" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="et_search_customer, ic_drop_arrow" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:background="@drawable/white_border_linear_gradient"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.app.rupyz.generic.custom.VerticalTextView
                android:id="@+id/tv_customer_level"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:background="@drawable/order_close_background"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:lines="1"
                android:padding="@dimen/dimen_5dp"
                android:singleLine="true"
                android:text="@string/closed"
                android:textColor="@color/black"
                android:textSize="@dimen/size_11sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_customer"
                android:layout_width="85dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/white"
                android:src="@mipmap/no_photo_available"
                app:layout_constraintBottom_toBottomOf="@+id/tv_authorize_person_name"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset" />


            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_14sp"
                android:layout_marginEnd="14dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_customer"
                app:layout_constraintTop_toTopOf="@+id/iv_customer" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_14sp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="14dp"
                android:drawablePadding="@dimen/dimen_9dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/sales_text_color_location"
                android:textSize="@dimen/size_12sp"
                app:drawableStartCompat="@drawable/ic_sales_order_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_customer"
                app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

            <TextView
                android:id="@+id/tv_authorize_person_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_14sp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_customer"
                app:layout_constraintTop_toBottomOf="@+id/tv_location" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/size_12sp"
                android:background="@color/white"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toBottomOf="@+id/tv_authorize_person_name"
                app:layout_goneMarginTop="@dimen/size_12sp" />


            <TextView
                android:id="@+id/tv_remove_selected_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="@dimen/size_10sp"
                android:text="@string/remove"
                android:textColor="@color/sale_overview_view_all"
                android:textSize="@dimen/size_14sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_parent_customer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/white_background_10dp_corner"
        android:elevation="@dimen/dimen_10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cl_transfer_info">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_customer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimen_40dp"
            app:layout_constraintHeight_max="250dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_no_customer_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/no_customer_found"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/paren_customer_progress_bar"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:padding="@dimen/dimen_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/size_16sp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/cl_transfer_info" />

    <TextView
        android:id="@+id/tv_map_customer_list_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_map_customer_list_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <TextView
        android:id="@+id/tv_map_customer_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mapped_retailer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dimen_20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_transfer"
        app:layout_constraintTop_toBottomOf="@+id/tv_map_customer_list_heading" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_customer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_map_customer_list_heading"
        app:shimmer_auto_start="true"
        app:shimmer_direction="left_to_right"
        app:shimmer_repeat_mode="restart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_item_customer" />

            <include layout="@layout/shimmer_item_customer" />

            <include layout="@layout/shimmer_item_customer" />

            <include layout="@layout/shimmer_item_customer" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>


    <TextView
        android:id="@+id/tv_transfer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/green"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="@string/transfer"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>