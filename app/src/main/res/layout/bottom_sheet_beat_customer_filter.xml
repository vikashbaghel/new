<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:padding="@dimen/size_16sp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/hd_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/filters"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="#E5E5E5"
        app:layout_constraintBottom_toTopOf="@+id/scrollView" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linBottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp">

            <TextView
                android:id="@+id/hd_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/city_without_star"
                android:textColor="@color/tab_un_selected_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="50dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/beat_hint_color"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/hd_city" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#E5E5E5"
                app:layout_constraintTop_toBottomOf="@+id/et_city" />

            <androidx.constraintlayout.widget.Group
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="view2, et_city, hd_city" />


            <TextView
                android:id="@+id/hd_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/customer_level"
                android:textColor="@color/tab_un_selected_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_customer_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_12sp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="1dp"
                android:paddingEnd="@dimen/dimen_20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/hd_level" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#E5E5E5"
                app:layout_constraintTop_toBottomOf="@+id/rv_customer_type" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_customer_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="view3, rv_customer_type, hd_level" />

            <TextView
                android:id="@+id/hd_selected_customer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_16sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/select_customer"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <TextView
                android:id="@+id/tv_seelcted_customer_type"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:drawablePadding="@dimen/size_12sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:drawableEndCompat="@drawable/ic_drop_down_holo"
                app:drawableStartCompat="@mipmap/ic_search"
                app:layout_constraintTop_toBottomOf="@+id/hd_selected_customer_type" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:layout_marginBottom="@dimen/size_10sp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:elevation="@dimen/dimen_5dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tv_seelcted_customer_type">

                <EditText
                    android:id="@+id/et_search_customer"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/size_12sp"
                    android:layout_marginTop="@dimen/size_12sp"
                    android:layout_marginEnd="@dimen/size_12sp"
                    android:background="@drawable/network_search_edit_text_style"
                    android:drawableStart="@mipmap/ic_search"
                    android:drawablePadding="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/et_search_customer"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingEnd="@dimen/dimen_50dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_clear_search_customer"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginEnd="@dimen/dimen_6dp"
                    android:padding="@dimen/dimen_2dp"
                    android:rotation="45"
                    android:src="@drawable/nav_add"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/et_search_customer"
                    app:layout_constraintEnd_toEndOf="@+id/et_search_customer"
                    app:layout_constraintTop_toTopOf="@+id/et_search_customer"
                    app:tint="@color/lead_add_blue" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_customer_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="@dimen/dimen_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_max="250dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_search_customer" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#E5E5E5"
                app:layout_constraintTop_toBottomOf="@+id/cl_customer_list" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="view5, hd_selected_customer_type, tv_seelcted_customer_type" />

            <TextView
                android:id="@+id/hd_assign_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_16sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/assigned_staff"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view5" />

            <TextView
                android:id="@+id/tv_assign_staff"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:drawablePadding="@dimen/size_12sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:drawableEndCompat="@drawable/ic_drop_down_holo"
                app:drawableStartCompat="@mipmap/ic_search"
                app:layout_constraintTop_toBottomOf="@+id/hd_assign_staff" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_assign_staff_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:layout_marginBottom="@dimen/size_10sp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:elevation="@dimen/dimen_5dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tv_assign_staff">

                <EditText
                    android:id="@+id/et_search_staff"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/size_12sp"
                    android:layout_marginTop="@dimen/size_12sp"
                    android:layout_marginEnd="@dimen/size_12sp"
                    android:background="@drawable/network_search_edit_text_style"
                    android:drawableStart="@mipmap/ic_search"
                    android:drawablePadding="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/et_search_staff"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingEnd="@dimen/dimen_50dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_clear_search"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginEnd="@dimen/dimen_6dp"
                    android:padding="@dimen/dimen_2dp"
                    android:rotation="45"
                    android:src="@drawable/nav_add"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/et_search_staff"
                    app:layout_constraintEnd_toEndOf="@+id/et_search_staff"
                    app:layout_constraintTop_toTopOf="@+id/et_search_staff"
                    app:tint="@color/lead_add_blue" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_staff_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="@dimen/dimen_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_max="250dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_search_staff" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_staff_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="view4, hd_assign_staff, tv_assign_staff" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:background="@drawable/border_gray"
            android:elevation="@dimen/size_10sp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/reset"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_proceed"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_proceed"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:background="@color/filter_proceed_green"
            android:elevation="@dimen/size_10sp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/apply"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/button_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_cancel"
            app:layout_constraintTop_toTopOf="@+id/button_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>