<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_check"
        android:layout_width="@dimen/size_18sp"
        android:layout_height="@dimen/size_18sp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:src="@drawable/check_disable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/size_16sp"
        android:background="#3DFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/ll_info"
        app:layout_constraintStart_toEndOf="@+id/img_check"
        app:layout_constraintTop_toTopOf="@+id/ll_info" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginTop="@dimen/size_12sp"
        android:layout_marginBottom="@dimen/size_12sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_org_legal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/txt_pan_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#787878"
            android:textSize="@dimen/size_14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>