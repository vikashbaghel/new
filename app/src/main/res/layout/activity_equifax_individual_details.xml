<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    tools:context=".ui.equifax.fragment.EquiFaxIndividualFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/white"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/img_back"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_width="wrap_content"
                    app:tint="@color/black"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/header_text"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/size_16sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_below="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_1dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/null_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/dashboard_risk_layout_null"
                        layout="@layout/risk_layout_null" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fill_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--<LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Hi, "
                            android:textColor="@color/white"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/poppins_semibold"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="24dp" />
                    </LinearLayout>-->



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/dashboard_risk_layout"
                                layout="@layout/equifax_risk_layout" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:layout_marginBottom="@dimen/dimen_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/score_insights"
                                        android:textColor="@color/score_insight_color"
                                        android:textSize="@dimen/size_16sp" />

                                    <ImageButton
                                        android:id="@+id/btn_score_insights_info"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dimen_5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="@dimen/dimen_5dp"
                                        android:src="@mipmap/ic_score_insight_info" />

                                </LinearLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/key_factors_affecting_your_score"
                                    android:textColor="@color/score_insight_key_factor_color"
                                    android:textSize="@dimen/size_12sp" />

                            </LinearLayout>

                            <include
                                android:id="@+id/score_insights"
                                layout="@layout/score_insights" />


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:cardCornerRadius="@dimen/dimen_10dp"
                                app:cardElevation="@dimen/dimen_10dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white">

                                    <com.github.mikephil.charting.charts.BarChart
                                        android:id="@+id/loanBarChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="250dp"
                                        android:layout_margin="@dimen/dimen_5dp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:cardCornerRadius="@dimen/dimen_10dp"
                                app:cardElevation="@dimen/dimen_10dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white">

                                    <com.github.mikephil.charting.charts.LineChart
                                        android:id="@+id/loanLineChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="250dp"
                                        android:layout_margin="@dimen/dimen_5dp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:layout_marginBottom="@dimen/dimen_10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/credit_history_at_a_glance"
                                    android:textColor="@color/credit_history_header_color"
                                    android:textSize="@dimen/size_16sp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/decode_your_credit_history"
                                    android:textColor="@color/credit_history_decode_history_color"
                                    android:textSize="@dimen/size_12sp" />

                            </LinearLayout>


                            <include
                                android:id="@+id/loan_layout"
                                layout="@layout/loans_layout" />

                            <include
                                android:id="@+id/facility_mix_layout"
                                layout="@layout/facility_mix_layout" />

                            <include
                                android:id="@+id/repayments_overdue_layout"
                                layout="@layout/repayments_overdue_layout" />

                            <include
                                android:id="@+id/negative_npa_layout"
                                layout="@layout/equifax_individual_cases_default_layout" />

                            <include
                                android:id="@+id/ownership_mix_layout"
                                layout="@layout/lender_mix_layout" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>