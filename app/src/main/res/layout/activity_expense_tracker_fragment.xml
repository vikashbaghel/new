<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sales.expense.ExpenseTrackerListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_expenses_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_my_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_purple"
            android:gravity="center"
            android:padding="@dimen/size_12sp"
            android:text="@string/my_expenses"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toStartOf="@+id/tv_approve_expense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_approve_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/expense_dark_gray"
            android:padding="@dimen/size_12sp"
            android:text="@string/approval_requests"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_my_expense"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_expenses_tab" />

</androidx.constraintlayout.widget.ConstraintLayout>