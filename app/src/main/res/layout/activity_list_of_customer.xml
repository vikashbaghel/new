<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_gradiant"
    tools:context=".sales.customer.ListOfCustomerActivity">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:shadowColor="@color/analytics_view_drop_shadow_color"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/list_of_customer"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />


    <TextView
        android:id="@+id/iv_add_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/white_blue_stroke_25dp_background"
        android:drawablePadding="@dimen/dimen_6dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:paddingStart="@dimen/size_12sp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/size_12sp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text="@string/customer"
        android:textAllCaps="false"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_12sp"
        app:drawableStartCompat="@drawable/ic_add"
        app:iconTint="@color/theme_purple"
        app:layout_constraintBottom_toBottomOf="@+id/tv_toolbar_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_toolbar_title"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/edit_text_white_background"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/size_10sp"
        android:paddingEnd="@dimen/dimen_50dp"
        android:paddingBottom="@dimen/size_10sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/beat_hint_color"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_sort_by"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />
    
    
    <View
        android:layout_width="@dimen/dimen_1_5dp"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@color/color_DDDDDD"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintStart_toStartOf="@+id/iv_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"/>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_centerInParent="true"
        android:paddingStart="@dimen/dimen_15dp"
        android:paddingEnd="@dimen/dimen_15dp"
        android:src="@drawable/ic_search_new"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/et_search" />

    <ImageView
        android:id="@+id/iv_clear_search"
        android:layout_width="@dimen/size_24sp"
        android:layout_height="@dimen/size_24sp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/size_12sp"
        android:background="@drawable/circle_blue_gradient"
        android:padding="@dimen/dimen_8dp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:tint="@color/white" />



    <ImageView
        android:id="@+id/tv_sort_by"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:padding="@dimen/size_10sp"
        android:src="@drawable/ic_sort"
        app:layout_constraintEnd_toStartOf="@+id/tv_filter"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:tint="@color/color_817EB1" />

    <ImageView
        android:id="@+id/tv_filter"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:gravity="center"
        android:padding="@dimen/size_10sp"
        android:src="@drawable/ic_filter_gray"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:tint="@color/color_817EB1" />


    <TextView
        android:id="@+id/tv_filter_count"
        android:layout_width="@dimen/size_18sp"
        android:layout_height="@dimen/size_18sp"
        android:layout_gravity="center"
        android:background="@drawable/circle_red_gradient"
        android:backgroundTint="@color/payment_rejected_text_color"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_1dp"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:translationY="-5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_filter"
        app:layout_constraintTop_toTopOf="@+id/tv_filter" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sort_by">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_customer_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="@dimen/size_16sp"
            android:paddingBottom="@dimen/dimen_50dp"
            app:layout_constraintBottom_toTopOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_customer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_auto_start="true"
            app:shimmer_direction="left_to_right"
            app:shimmer_repeat_mode="restart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/shimmer_item_customer" />

                <include layout="@layout/shimmer_item_customer" />

                <include layout="@layout/shimmer_item_customer" />

                <include layout="@layout/shimmer_item_customer" />

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_empty_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_empty_data"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:src="@drawable/ic_empty_data"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/no_customer_found"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_empty_data" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/main_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>