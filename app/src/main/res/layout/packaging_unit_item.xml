<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_packaging_unit"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:drawablePadding="@dimen/size_10sp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:hint="@string/select_a_unit"
        android:paddingStart="@dimen/size_16sp"
        android:paddingEnd="@dimen/size_16sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textColorHint="@color/beat_hint_color"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toStartOf="@+id/edt_packaging_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edt_packaging_size"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/size_14sp"
        app:layout_goneMarginEnd="@dimen/size_20sp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:drawablePadding="@dimen/size_12sp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:maxLength="9"
        android:paddingStart="@dimen/size_16sp"
        android:paddingEnd="@dimen/size_16sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/beat_hint_color"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_packaging_unit"
        app:layout_constraintEnd_toStartOf="@+id/iv_delete"
        app:layout_constraintStart_toEndOf="@+id/tv_packaging_unit"
        app:layout_constraintTop_toTopOf="@+id/tv_packaging_unit" />

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:background="@color/leve_divider_color"
        app:layout_constraintBottom_toBottomOf="@+id/edt_packaging_size"
        app:layout_constraintEnd_toStartOf="@+id/tv_packaging_unit_per_size"
        app:layout_constraintTop_toTopOf="@+id/edt_packaging_size" />

    <TextView
        android:id="@+id/tv_packaging_unit_per_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_packaging_size"
        app:layout_constraintEnd_toEndOf="@+id/edt_packaging_size"
        app:layout_constraintTop_toTopOf="@+id/edt_packaging_size" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_packaging_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="view1, tv_packaging_unit_per_size" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:padding="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/size_20sp"
        app:layout_constraintHorizontal_weight="1"
        android:src="@drawable/ic_delete_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>