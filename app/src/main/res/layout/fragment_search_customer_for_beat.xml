<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_assign_customer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_13sp"
        android:layout_marginEnd="@dimen/size_16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/et_search_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/network_search_edit_text_style"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_customer"
            android:imeOptions="actionSearch"
            android:paddingStart="@dimen/dimen_40dp"
            android:paddingTop="@dimen/size_10sp"
            android:paddingEnd="60dp"
            android:paddingBottom="@dimen/size_10sp"
            android:singleLine="true"
            android:textColorHint="#6A6A6A"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/size_10sp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:src="@mipmap/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_customer"
            app:layout_constraintStart_toStartOf="@+id/et_search_customer"
            app:layout_constraintTop_toTopOf="@+id/et_search_customer" />

        <ImageView
            android:id="@+id/iv_clear_search"
            android:layout_width="@dimen/size_24sp"
            android:layout_height="@dimen/size_24sp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_blue_gradient"
            android:padding="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/size_12sp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_customer"
            app:layout_constraintEnd_toEndOf="@+id/et_search_customer"
            app:layout_constraintTop_toTopOf="@+id/et_search_customer" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_customer_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_10sp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/size_20sp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_customer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_empty_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_customer">

            <ImageView
                android:id="@+id/iv_empty_data"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:src="@drawable/ic_empty_data"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/no_customer_found"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_empty_data" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progress_bar_customer_list_pagination"
            android:layout_width="@dimen/size_24sp"
            android:layout_height="@dimen/size_24sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_customer_list" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/border_gray"
        android:elevation="@dimen/size_10sp"
        android:textSize="@dimen/size_16sp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add"
        app:layout_constraintEnd_toStartOf="@+id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_add" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@color/filter_proceed_green"
        android:elevation="@dimen/size_10sp"
        android:text="@string/save"
        android:textAllCaps="true"
        android:textSize="@dimen/size_16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>