<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/white_border_linear_rounded_gradient"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_store_front_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:drawablePadding="@dimen/dimen_4dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/size_20sp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/size_20sp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:text="@string/storefront"
        android:textColor="@color/tab_un_selected_color"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_store_front"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="@dimen/dimen_10dp" />

    <TextView
        android:id="@+id/tv_business_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20sp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/sales_heading_blue"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_front_view"
        app:layout_goneMarginTop="@dimen/size_12sp" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/ic_icon_ionic_ios_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintEnd_toStartOf="@+id/cl_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_name" />

    <TextView
        android:id="@+id/tv_authorize_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/sales_text_color_rupees_blue"
        android:textSize="@dimen/size_16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_category" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/size_20sp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:textColor="@color/sales_text_color_location"
        android:textSize="@dimen/size_12sp"
        app:drawableStartCompat="@drawable/ic_sales_order_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_authorize_person_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_name">

        <Spinner
            android:id="@+id/spinner_lead_status"
            style="@style/SpinnerThemeGreen"
            android:layout_width="120dp"
            android:layout_height="@dimen/size_24sp"
            android:spinnerMode="dropdown"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/payment_approved_background"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingStart="@dimen/size_16sp"
            android:paddingTop="@dimen/dimen_3dp"
            android:paddingEnd="@dimen/size_16sp"
            android:paddingBottom="@dimen/dimen_3dp"
            android:text="Approved"
            android:textColor="@color/payment_approved_text_color"
            android:textSize="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_lead_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinner_lead_status"
            app:layout_constraintStart_toStartOf="@+id/spinner_lead_status"
            app:layout_constraintTop_toTopOf="@+id/spinner_lead_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_created_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20sp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />


    <ImageView
        android:id="@+id/iv_whats_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_18sp"
        android:src="@drawable/ic_order_whats_app"
        app:layout_constraintBottom_toBottomOf="@+id/tv_created_by"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:src="@drawable/ic_order_call"
        app:layout_constraintBottom_toBottomOf="@+id/tv_created_by"
        app:layout_constraintEnd_toStartOf="@+id/iv_whats_call" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_created_by" />


    <TextView
        android:id="@+id/tv_created_on"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20sp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_record_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/tv_record_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/white_border_blue_gradient"
        android:drawablePadding="@dimen/dimen_8dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="7dp"
        android:paddingBottom="@dimen/dimen_7dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:text="@string/record_activity"
        android:textColor="@color/black"
        android:textSize="@dimen/size_10sp"
        app:drawableStartCompat="@drawable/ic_record_customer_activity"
        app:layout_constraintBottom_toBottomOf="@+id/tv_created_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.2"
        app:layout_constraintTop_toTopOf="@+id/tv_created_on" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_activity"
        app:layout_goneMarginTop="@dimen/dimen_10dp" />

    <TextView
        android:id="@+id/tv_offline_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="@dimen/dimen_12dp"
        android:text="@string/offline"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="view2, tv_offline_mode"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>