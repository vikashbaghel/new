<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_border_linear_rounded_gradient"
    android:padding="@dimen/size_10sp">

    <ImageView
        android:id="@+id/marker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:padding="@dimen/size_10sp"
        android:layout_marginStart="@dimen/dimen_6dp"
        app:contentPadding="@dimen/size_10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/theme_purple" />

    <TextView
        android:id="@+id/marker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/marker_background"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_2dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingEnd="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:text="01:02 PM"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:translationY="-4dp"
        app:layout_constraintEnd_toEndOf="@+id/marker"
        app:layout_constraintStart_toStartOf="@+id/marker"
        app:layout_constraintTop_toBottomOf="@+id/marker" />

    <TextView
        android:id="@+id/tv_activity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/sales_heading_blue"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marker_text"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/dimen_6dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/lead_location_gray"
        android:textSize="@dimen/size_12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_activity_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_name" />

</androidx.constraintlayout.widget.ConstraintLayout>