<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_4dp"
    android:elevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_12sp"
        android:background="@drawable/cart_item_bg"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_product"
            android:layout_width="85dp"
            android:layout_height="95dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:padding="@dimen/dimen_2dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_total_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/tv_order_nano_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:text="SKU15344A"
            android:textColor="@color/chart_grid_color"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_package"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toTopOf="@id/view1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_package"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_nano_id" />
        <TextView
            android:id="@+id/tv_order_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20sp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="12 packets"
            android:textColor="@color/chart_grid_color"
            android:textSize="@dimen/size_11sp"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_name" />


        <TextView
            android:id="@+id/tv_order_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20sp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="12 packets"
            android:textColor="@color/chart_grid_color"
            android:textSize="@dimen/size_11sp"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_cat" />

        <TextView
            android:id="@+id/tv_order_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/size_10sp"
            android:fontFamily="@font/roboto_medium"
            android:text="18000"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toStartOf="@+id/cl_more_details"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_qty" />

        <TextView
            android:id="@+id/tv_packaging_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:fontFamily="@font/poppins_medium"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:src="@drawable/info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Carton"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/dimen_10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_packaging_size"
            app:layout_constraintTop_toBottomOf="@+id/tv_packaging_size" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_20sp"
            android:paddingEnd="@dimen/dimen_2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_total_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_order_total_price">


            <TextView
                android:id="@+id/tv_more_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="0dp"
                android:text="@string/more_details"
                android:visibility="gone"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/size_10sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_details"
                app:layout_constraintEnd_toStartOf="@+id/iv_details"
                app:layout_constraintTop_toTopOf="@+id/iv_details" />

            <ImageView
                android:id="@+id/iv_details"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_drop_down_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/theme_purple" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_other_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/iv_product">

            <TextView
                android:id="@+id/hd_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:drawablePadding="@dimen/dimen_9dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/buyers_price"
                android:textColor="@color/filter_heading_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/size_12sp"
                android:fontFamily="@font/roboto_medium"
                android:text="23400"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_order_price"
                app:layout_constraintEnd_toStartOf="@+id/tv_order_discounted_price"
                app:layout_constraintTop_toTopOf="@+id/hd_order_price"
                app:layout_goneMarginEnd="@dimen/size_16sp" />

            <TextView
                android:id="@+id/tv_order_discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:fontFamily="@font/roboto_medium"
                android:text="12345"
                android:textColor="@color/cart_item_discounted_price"
                android:textSize="@dimen/size_10sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_order_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_order_price" />

            <View
                android:id="@+id/view_discount"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-5dp"
                android:background="@color/cart_item_discounted_price"
                app:layout_constraintBottom_toBottomOf="@+id/tv_order_discounted_price"
                app:layout_constraintEnd_toEndOf="@+id/tv_order_discounted_price"
                app:layout_constraintStart_toStartOf="@+id/tv_order_discounted_price"
                app:layout_constraintTop_toTopOf="@+id/tv_order_discounted_price" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_discounted_price_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_order_discounted_price, view_discount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hd_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/category"
                android:textColor="@color/filter_heading_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_order_price" />

            <TextView
                android:id="@+id/tv_order_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"

                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hd_category" />


            <TextView
                android:id="@+id/hd_gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/gst"
                android:textColor="@color/filter_heading_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_category" />

            <TextView
                android:id="@+id/tv_gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_gst"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hd_gst" />


            <TextView
                android:id="@+id/hd_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/filter_heading_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_gst" />

            <TextView
                android:id="@+id/tv_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_discount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hd_discount" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_discount"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="hd_discount, tv_discount_amount"
                app:layout_constraintTop_toBottomOf="@+id/hd_gst" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>