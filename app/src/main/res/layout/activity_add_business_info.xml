<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_style"
    tools:context=".sales.organization.AddBusinessInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                app:titleTextColor="@color/white">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="GST"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16sp" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:src="@mipmap/ic_rupyz_white_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/grow_business"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <!--                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_10dp"
                                    android:layout_marginTop="@dimen/dimen_50dp"
                                    android:src="@mipmap/ic_rupyz_white_logo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/grow_business"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:textColor="@color/white"
                                    android:textSize="25sp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@drawable/walkthrough_bg_style"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20dp">

                    <TextView
                        android:id="@+id/txv_gst_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="GST 77AHPJREJJJJKKKKKK"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp" />

                    <View
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/short_line_style" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/please_confirm_below_details"
                        android:textAlignment="center"
                        android:textColor="#31EEFC"
                        android:textSize="@dimen/size_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/establishment_date"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/edt_incorporation_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:focusable="false"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="DD-MM-YYYY"
                            android:inputType="number"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/address_line_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/edt_first_address_line"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="text"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/address_line_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/edt_second_address_line"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="text"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/pincode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="number"
                            android:maxEms="6"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/state"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">

                        <Spinner
                            android:id="@+id/spinner_state"
                            style="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:backgroundTint="@color/white"
                            android:popupBackground="@color/black" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_25dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/city"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/edt_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="text"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_add_bussiness_info"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:background="@drawable/check_score_button_style"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/str_continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <CheckBox
                            android:id="@+id/chb_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center|left"
                                android:text="@string/whatsapp_consent"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_10sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/dimen_25dp"
                            android:layout_height="@dimen/dimen_25dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:src="@mipmap/ic_whatsapp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>