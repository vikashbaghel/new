<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.payment.PaymentDetailsActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/payment_details"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12sp"
            android:layout_marginEnd="@dimen/size_12sp"
            android:background="@drawable/white_border_linear_rounded_gradient"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_30dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/hd_payment_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/amount"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_1"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

            <TextView
                android:id="@+id/hd_colum_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_amount"
                app:layout_constraintEnd_toStartOf="@+id/tv_payment_amount"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_payment_amount"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_amount" />


            <TextView
                android:id="@+id/tv_payment_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_1"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_amount" />

            <TextView
                android:id="@+id/hd_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/date_without_star"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_3"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_payment_amount" />

            <TextView
                android:id="@+id/hd_colum_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_date"
                app:layout_constraintEnd_toStartOf="@+id/tv_date"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_date"
                app:layout_constraintTop_toTopOf="@+id/hd_date" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_7"
                app:layout_constraintTop_toTopOf="@+id/hd_date" />

            <TextView
                android:id="@+id/hd_payment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/payment_status"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_3"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_date" />

            <TextView
                android:id="@+id/hd_colum_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_status"
                app:layout_constraintEnd_toStartOf="@+id/tv_payment_status"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_payment_status"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_status" />


            <TextView
                android:id="@+id/tv_payment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_3"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_status" />

            <TextView
                android:id="@+id/hd_payment_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/payment_id"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_3"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_payment_status" />

            <TextView
                android:id="@+id/hd_colum_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_id"
                app:layout_constraintEnd_toStartOf="@+id/tv_transaction_id"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_payment_id"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_id" />


            <TextView
                android:id="@+id/tv_transaction_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_8"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_id" />

            <TextView
                android:id="@+id/hd_payment_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/payment_mode"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_2"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_payment_id" />

            <TextView
                android:id="@+id/hd_colum_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_mode"
                app:layout_constraintEnd_toStartOf="@+id/tv_payment_mode"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_payment_mode"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_mode" />


            <TextView
                android:id="@+id/tv_payment_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_mode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_2"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_mode" />


            <TextView
                android:id="@+id/hd_ref_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/transaction_ref_no"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_4"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_payment_mode" />

            <TextView
                android:id="@+id/hd_colum_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_ref_no"
                app:layout_constraintEnd_toStartOf="@+id/tv_transaction_ref"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_ref_no"
                app:layout_constraintTop_toTopOf="@+id/hd_ref_no" />


            <TextView
                android:id="@+id/tv_transaction_ref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_ref_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_4"
                app:layout_constraintTop_toTopOf="@+id/hd_ref_no" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_transaction_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="hd_ref_no, hd_colum_4, tv_transaction_ref" />

            <TextView
                android:id="@+id/hd_transaction_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/transaction_time"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_9"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_ref_no" />

            <TextView
                android:id="@+id/hd_colum_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_transaction_date"
                app:layout_constraintEnd_toStartOf="@+id/tv_transaction_date"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_transaction_date"
                app:layout_constraintTop_toTopOf="@+id/hd_transaction_date" />


            <TextView
                android:id="@+id/tv_transaction_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_transaction_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_9"
                app:layout_constraintTop_toTopOf="@+id/hd_transaction_date" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_transaction_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_transaction_date, hd_transaction_date, hd_colum_9" />


            <TextView
                android:id="@+id/tv_notes_hd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/notes"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_5"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_transaction_date" />

            <TextView
                android:id="@+id/hd_colum_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_notes_hd"
                app:layout_constraintEnd_toStartOf="@+id/tv_comment"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/tv_notes_hd"
                app:layout_constraintTop_toTopOf="@+id/tv_notes_hd" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_5"
                app:layout_constraintTop_toTopOf="@+id/tv_notes_hd" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_comment, hd_colum_5, tv_notes_hd" />


            <TextView
                android:id="@+id/hd_image_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_13sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/images_without_star"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toStartOf="@+id/hd_colum_6"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment" />


            <TextView
                android:id="@+id/hd_colum_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/colon"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="@+id/hd_image_upload"
                app:layout_constraintEnd_toStartOf="@+id/rv_photos"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/hd_image_upload"
                app:layout_constraintTop_toTopOf="@+id/hd_image_upload" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_photos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintStart_toEndOf="@+id/hd_colum_6"
                app:layout_constraintTop_toTopOf="@+id/hd_image_upload" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="rv_photos, hd_colum_6, hd_image_upload" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>