                             android:padding="@dimen/dimen_20dp"
                             android:paddingBottom="@dimen/dimen_15dp"
                             android:visibility="gone" />-->

                        <LinearLayout
                            android:id="@+id/ll_view_emi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:background="@drawable/home_card_style"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_20dp"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_emi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/emi_reminder_item" />

                            <TextView
                                android:id="@+id/txv_view_all_emi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_weight=".2"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="end"
                                android:paddingEnd="@dimen/dimen_10dp"
                                android:text="@string/view_more"
                                android:textColor="#312B81"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txv_upcoming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="@dimen/dimen_5dp"
                            android:text="Upcoming Events"
                            android:textColor="@color/upcoming_header_color"
                            android:textSize="@dimen/size_16sp"
                            android:visibility="gone" />

                        <!--                        <LinearLayout
                                                    android:visibility="gone"
                                                    android:id="@+id/ll_view_compliance"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:padding="@dimen/dimen_20dp"
                                                    android:background="@drawable/home_card_style"
                                                    android:layout_marginStart="@dimen/dimen_10dp"
                                                    android:layout_marginEnd="@dimen/dimen_10dp"
