                                                    <TextView
                                                        android:id="@+id/txv_view_all_compliance"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_weight=".2"
                                                        android:fontFamily="@font/poppins_medium"
                                                        android:text="View All"
                                                        android:gravity="end"
                                                        android:layout_marginTop="@dimen/dimen_5dp"
                                                        android:layout_gravity="end"
                                                        android:textColor="#151515"
                                                        android:textSize="@dimen/size_12sp" />

                                                </LinearLayout>-->

                        <LinearLayout
                            android:id="@+id/ll_view_compliance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:background="@drawable/home_card_style"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_20dp"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_compliance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                                tools:listitem="@layout/compliance_calendar_item" />

                            <TextView
                                android:id="@+id/txv_view_all_compliance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_weight=".2"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="end"
                                android:text="@string/view_more"
                                android:textColor="#312B81"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="@dimen/dimen_5dp"
                            android:text="Alerts"
                            android:textColor="@color/alerts_header_color"
                            android:textSize="@dimen/size_16sp"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_microblog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/micro_blog_item" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>