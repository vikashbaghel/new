<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_customer_wise_sales"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:padding="@dimen/dimen_8dp"
    android:elevation="@dimen/dimen_12dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cl_filter">

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/dimen_4dp"
        app:layout_constraintHorizontal_weight="1"
        android:paddingEnd="@dimen/dimen_4dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_orders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_4dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_sale_value"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toEndOf="@+id/tv_customer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sale_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_weight="1"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_order_percentage"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tv_orders"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_4dp"
        app:layout_constraintHorizontal_weight="0.8"
        android:textColor="@color/black"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_weight="0.9"
        app:layout_constraintStart_toEndOf="@+id/tv_sale_value"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>