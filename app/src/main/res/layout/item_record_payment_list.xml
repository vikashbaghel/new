<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:background="@drawable/white_border_linear_rounded_gradient"
    android:elevation="2dp"
    android:paddingBottom="@dimen/dimen_15dp">

    <TextView
        android:id="@+id/tv_payment_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_payment_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_payment_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginEnd="6dp"
        app:layout_goneMarginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="22-jan-2022"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_id"
        app:layout_constraintEnd_toStartOf="@+id/iv_more"
        app:layout_constraintTop_toTopOf="@+id/tv_payment_id"
        app:layout_goneMarginStart="@dimen/size_16sp" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_16sp"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/ic_icon_ionic_ios_more"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_payment_id" />

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Order name for recent view"
        android:textColor="@color/payment_customer_name_text_color"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_id" />

    <TextView
        android:id="@+id/hd_payment_mode"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/payment_mode_with_colon"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/chart_grid_color"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

    <TextView
        android:id="@+id/tv_payment_mode"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintStart_toEndOf="@+id/hd_payment_mode"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

    <TextView
        android:id="@+id/order_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/entered_by_with_colon"
        android:textColor="@color/chart_grid_color"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_mode" />

    <TextView
        android:id="@+id/tv_order_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintEnd_toStartOf="@+id/cl_status"
        app:layout_constraintStart_toEndOf="@+id/order_by"
        app:layout_constraintTop_toTopOf="@+id/order_by" />


    <TextView
        android:id="@+id/hd_transaction_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:text="@string/transaction_ref_no_with_colon"
        android:fontFamily="@font/poppins_regular"
        android:lines="1"
        android:textColor="@color/chart_grid_color"
        android:textSize="@dimen/size_11sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_by" />

    <TextView
        android:id="@+id/tv_transaction_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/tv_amount"
        app:layout_constraintStart_toEndOf="@+id/hd_transaction_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_by" />

    <TextView
        android:id="@+id/hd_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/transaction_time_with_colon"
        android:textColor="@color/chart_grid_color"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transaction_id" />


    <TextView
        android:id="@+id/tv_transaction_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        app:layout_constraintBottom_toBottomOf="@+id/hd_transaction_date"
        app:layout_constraintEnd_toStartOf="@+id/cl_status"
        app:layout_constraintStart_toEndOf="@+id/hd_transaction_date"
        app:layout_constraintTop_toTopOf="@+id/hd_transaction_date" />


    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10sp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="1200"
        android:textColor="@color/sales_text_color_rupees_blue"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toTopOf="@+id/cl_status"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:background="@drawable/payment_pending_background"
        app:layout_constraintBottom_toBottomOf="@+id/tv_transaction_date"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/spinner_payment_status"
            style="@style/SpinnerThemeGreen"
            android:layout_width="120dp"
            android:layout_height="@dimen/size_24sp"
            android:spinnerMode="dropdown"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/payment_approved_background"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingStart="@dimen/size_16sp"
            android:paddingTop="@dimen/dimen_3dp"
            android:paddingEnd="@dimen/size_16sp"
            android:paddingBottom="@dimen/dimen_3dp"
            android:text="Approved"
            android:textColor="@color/payment_approved_text_color"
            android:textSize="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_payment_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinner_payment_status"
            app:layout_constraintStart_toStartOf="@+id/spinner_payment_status"
            app:layout_constraintTop_toTopOf="@+id/spinner_payment_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_rejected_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_14sp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/payement_rejected_comment_bg"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/dimen_12dp"
        android:textColor="@color/sale_overview_view_all"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_status" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_status"
        app:layout_goneMarginTop="@dimen/dimen_10dp" />

    <TextView
        android:id="@+id/tv_offline_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:text="@string/offline"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="view2, tv_offline_mode"
        app:layout_constraintTop_toBottomOf="@+id/cl_status" />


</androidx.constraintlayout.widget.ConstraintLayout>