<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/size_12sp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_border_linear_gradient"
    android:paddingTop="@dimen/size_12sp"
    android:paddingBottom="@dimen/size_12sp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_customer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:background="@color/white"
        android:src="@mipmap/no_photo_available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset" />

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14sp"
        android:layout_marginEnd="14dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toTopOf="@+id/iv_customer" />

    <TextView
        android:id="@+id/tv_activity_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_type" />


    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14sp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_10sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />


</androidx.constraintlayout.widget.ConstraintLayout>