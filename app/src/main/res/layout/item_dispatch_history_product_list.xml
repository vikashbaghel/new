<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_12sp"
    android:background="@drawable/white_border_linear_gradient"
    android:paddingStart="@dimen/size_15sp"
    android:paddingBottom="@dimen/size_15sp"
    android:paddingEnd="@dimen/size_15sp">


    <TextView
        android:id="@+id/tv_order_nano_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="SKU15344A"
        android:visibility="gone"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/chart_grid_color"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_product"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:padding="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_nano_id"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="@dimen/dimen_1dp" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_order_total_price"
        app:layout_constraintStart_toEndOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_nano_id" />

    <TextView
        android:id="@+id/tv_order_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="18000"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_order_name" />

    <TextView
        android:id="@+id/tv_order_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:text="Category"
        android:padding="@dimen/dimen_2dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/product_category_color"
        android:textSize="@dimen/size_12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_name" />

    <TextView
        android:id="@+id/hd_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/buyers_price_colon"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/hd_order_qty"
        />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/hd_order_price"
        app:layout_constraintStart_toEndOf="@+id/hd_order_price"
        app:layout_constraintTop_toTopOf="@+id/hd_order_price" />

    <TextView
        android:id="@+id/tv_order_discounted_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/cart_item_discounted_price"
        android:textSize="@dimen/size_11sp"
        android:layout_marginStart="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_price"
        app:layout_constraintStart_toEndOf="@+id/tv_order_price"
        app:layout_constraintTop_toTopOf="@+id/tv_order_price" />

    <View
        android:id="@+id/view_discount"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-5dp"
        android:background="@color/cart_item_discounted_price"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_discounted_price"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_discounted_price"
        app:layout_constraintStart_toStartOf="@+id/tv_order_discounted_price"
        app:layout_constraintTop_toTopOf="@+id/tv_order_discounted_price" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_discounted_price_after_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_order_discounted_price, view_discount"
        app:layout_constraintBottom_toBottomOf="@+id/hd_order_price"
        app:layout_constraintStart_toEndOf="@+id/hd_order_price"
        app:layout_constraintTop_toTopOf="@+id/hd_order_price" />


    <TextView
        android:id="@+id/hd_order_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/qty"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_category"
        />

    <TextView
        android:id="@+id/tv_order_qty"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintStart_toEndOf="@+id/hd_order_qty"
        app:layout_constraintTop_toTopOf="@+id/hd_order_qty" />


    <TextView
        android:id="@+id/tv_discount_applied"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_14sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:visibility="gone"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/discount_applied_with_rupee_symbol"
        android:textColor="@color/discount_applied_yellow"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_qty"
        app:layout_constraintStart_toEndOf="@+id/iv_product" />
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@color/color_DDDDDD"
        app:layout_constraintTop_toBottomOf="@+id/hd_order_price"
        android:id="@+id/view"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

      <TextView
            android:id="@+id/hd_shipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Shipped:"
          android:textAlignment="center"
            android:textColor="@color/leve_text_color"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_shipment_unit"
            app:layout_constraintStart_toStartOf="@+id/et_shipment_unit" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_shipment_unit"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="50"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/hd_shipment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_ordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/ordered_colon"
            android:textAlignment="center"
            android:textColor="@color/leve_text_color"
            android:textSize="13dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_ordered_unit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ordered_unit"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/size_12sp"
            android:layout_height="28dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textSize="13dp"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hd_ordered" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>