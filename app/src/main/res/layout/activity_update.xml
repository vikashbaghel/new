                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/select_review"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_18sp" />

                    <View
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/short_line_style" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/pan"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/txt_pan_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="text"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="left"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="GST Information"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_16sp" />

                        <ImageButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_down_arrow"
                            android:scaleType="fitXY" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="#4DFFFFFF" />

                    <TextView
