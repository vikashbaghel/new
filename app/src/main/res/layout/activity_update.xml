                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="text"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
