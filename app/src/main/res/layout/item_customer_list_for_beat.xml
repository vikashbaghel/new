<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_customer_name"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10sp"
        android:buttonTint="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/size_16sp"
        android:paddingEnd="@dimen/size_12sp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10sp"
        android:background="@drawable/white_border_linear_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cb_customer_name"
        app:layout_constraintTop_toTopOf="parent">

        <com.app.rupyz.generic.custom.VerticalTextView
            android:id="@+id/tv_customer_level"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:background="@drawable/order_close_background"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:lines="1"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="true"
            android:text="@string/closed"
            android:textColor="@color/black"
            android:textSize="@dimen/size_11sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_customer"
            android:layout_width="85dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:src="@mipmap/no_photo_available"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_authorize_person_name"
            app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset" />


        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginEnd="14dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            app:layout_constraintTop_toTopOf="@+id/iv_customer" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:drawablePadding="@dimen/dimen_9dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/sales_text_color_location"
            android:textSize="@dimen/size_12sp"
            app:drawableStartCompat="@drawable/ic_sales_order_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

        <TextView
            android:id="@+id/tv_authorize_person_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_parent_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/parent_customer_name_color"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            app:layout_constraintTop_toBottomOf="@+id/tv_authorize_person_name" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_12sp"
            android:background="@color/white"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
            app:layout_constraintTop_toBottomOf="@+id/tv_parent_customer_name"
            app:layout_goneMarginTop="@dimen/size_12sp" />


        <TextView
            android:id="@+id/tv_customer_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/size_10sp"
            android:textSize="@dimen/size_14sp"
            android:gravity="center"
            android:textColor="@color/theme_purple"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>