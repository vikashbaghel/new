<!-- res/layout/custom_marker_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/marker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_location_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/theme_purple" />

    <TextView
        android:id="@+id/marker_text"
        android:layout_width="17dp"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_height="17dp"
        android:gravity="center"
        android:text="36"
        android:background="@drawable/marker_background"
        app:layout_constraintStart_toStartOf="@+id/marker"
        app:layout_constraintEnd_toEndOf="@+id/marker"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>