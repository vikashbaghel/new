<!-- res/layout/custom_marker_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/custom_marker"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_location_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_marker_text"
        android:layout_width="16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="@+id/custom_marker"
        app:layout_constraintEnd_toEndOf="@+id/custom_marker"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>