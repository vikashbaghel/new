<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.cart.CartActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:shadowColor="@color/analytics_view_drop_shadow_color"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/review"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_10sp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/btn_layout"
        app:layout_constraintTop_toBottomOf="@+id/iv_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimen_40dp"
            android:visibility="visible">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_cart_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginEnd="@dimen/size_22sp"
                android:background="@drawable/cart_details_bg"
                android:paddingTop="@dimen/size_18sp"
                android:paddingBottom="@dimen/size_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:src="@drawable/ic_cart_item_bag"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_product_count"
                    app:tint="#FD7B35" />


                <TextView
                    android:id="@+id/tv_product_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24sp"
                    android:layout_marginEnd="@dimen/size_24sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="you have 2 items in your cart"
                    android:textColor="@color/cart_item_text"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_cart"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24sp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginEnd="@dimen/size_24sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rupy fin terpasf kignx"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_cart"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_count" />


                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Order No: 224we5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/iv_cart"
                    app:layout_constraintTop_toBottomOf="@+id/tv_company_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/size_18sp"
                android:background="@drawable/add_discount_bg"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:paddingEnd="@dimen/dimen_20dp"
                android:paddingBottom="@dimen/dimen_4dp"
                android:text="@string/add_new_product"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_cart_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16sp"
                android:overScrollMode="never"
                android:paddingStart="@dimen/size_10sp"
                android:paddingEnd="@dimen/size_10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_product" />


            <TextView
                android:id="@+id/tv_order_summery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_marginBottom="@dimen/size_14sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/order_summary"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_cart_items" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_cart_summery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/size_22sp"
                android:layout_marginBottom="@dimen/size_22sp"
                android:background="@drawable/cart_item_bg"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_summery">


                <TextView
                    android:id="@+id/hd_order_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/order_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hd_without_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/without_gst"
                    android:textColor="@color/lead_location_gray"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hd_order_total_amount"
                    app:layout_constraintStart_toEndOf="@+id/hd_order_total_amount"
                    app:layout_constraintTop_toTopOf="@+id/hd_order_total_amount" />


                <TextView
                    android:id="@+id/tv_order_total_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/hd_without_gst"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hd_order_total_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/gst"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hd_order_total_amount" />


                <TextView
                    android:id="@+id/tv_order_total_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hd_order_total_gst"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hd_order_total_gst" />

                <TextView
                    android:id="@+id/hd_order_add_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hd_order_total_gst" />

                <TextView
                    android:id="@+id/tv_discount_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_20sp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hd_order_add_discount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toEndOf="@+id/hd_order_add_discount"
                    app:layout_constraintTop_toTopOf="@+id/hd_order_add_discount" />

                <TextView
                    android:id="@+id/tv_add_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_22sp"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:background="@drawable/add_discount_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp"
                    android:text="@string/add"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hd_order_add_discount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hd_order_add_discount" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_discount_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    app:layout_constraintTop_toBottomOf="@+id/hd_order_add_discount" />

                <TextView
                    android:id="@+id/tv_add_more_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_22sp"
                    android:layout_marginTop="@dimen/size_12sp"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:background="@drawable/add_discount_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_12sp"
                    android:paddingEnd="@dimen/size_12sp"
                    android:text="@string/add_more"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_discount_unit" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_added_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="rv_discount_unit, tv_add_more_discount"
                    app:layout_constraintTop_toBottomOf="@+id/hd_order_total_amount" />

                <TextView
                    android:id="@+id/hd_delivery_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/delivery_charges"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_add_more_discount" />

                <TextView
                    android:id="@+id/tv_add_delivery_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_22sp"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:background="@drawable/add_discount_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp"
                    android:text="@string/add"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hd_delivery_charges"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hd_delivery_charges" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_others_charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    app:layout_constraintTop_toBottomOf="@+id/hd_delivery_charges" />

                <TextView
                    android:id="@+id/tv_add_more_others_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_22sp"
                    android:layout_marginTop="@dimen/size_12sp"
                    android:layout_marginEnd="@dimen/size_18sp"
                    android:background="@drawable/add_discount_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_12sp"
                    android:paddingEnd="@dimen/size_12sp"
                    android:text="@string/add_more"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_others_charges" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_added_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="rv_others_charges, tv_add_more_others_charges"
                    app:layout_constraintTop_toBottomOf="@+id/hd_order_total_amount" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@drawable/doted_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/hd_delivery_charges"
                    app:layout_constraintTop_toBottomOf="@+id/tv_add_more_others_charges" />

                <TextView
                    android:id="@+id/tv_order_total_amount_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_14sp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="@dimen/size_18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <TextView
                    android:id="@+id/hd_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_14sp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_order_total_amount_inc"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/hd_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginTop="@dimen/size_18sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/delivery_address"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_cart_summery" />

            <ImageView
                android:id="@+id/iv_edit_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_18sp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintTop_toTopOf="@+id/hd_tv_address"
                app:layout_constraintBottom_toBottomOf="@+id/hd_tv_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/black" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view_deliver_address_of_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginEnd="@dimen/size_22sp"
                android:background="@drawable/cart_item_bg"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hd_tv_address">

                <TextView
                    android:id="@+id/tv_address_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_22sp"
                    android:layout_marginTop="@dimen/size_16sp"
                    android:layout_marginEnd="@dimen/size_22sp"
                    android:background="@drawable/total_discount_orange_bg"
                    android:backgroundTint="@color/theme_color"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/dimen_7dp"
                    android:paddingTop="@dimen/dimen_1dp"
                    android:paddingEnd="@dimen/dimen_7dp"
                    android:paddingBottom="@dimen/dimen_1dp"
                    android:text="qea d"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_13sp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_address_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_22sp"
                    android:layout_marginTop="@dimen/dimen_9dp"
                    android:layout_marginEnd="@dimen/size_22sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="qea dmfvjanksdgvj AFDV  KASZ"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_address_type" />

                <TextView
                    android:id="@+id/tv_address_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_22sp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/size_22sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingBottom="@dimen/size_15sp"
                    android:text="qea dmfvjanksdgvj AFDV  KASZ"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_address_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_deliver_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:constraint_referenced_ids="hd_tv_address, iv_edit_delivery, view_deliver_address_of_order"
                app:layout_constraintTop_toBottomOf="@+id/cl_cart_summery" />

            <TextView
                android:id="@+id/hd_payment_against_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginTop="@dimen/size_18sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/payment_against_order"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_deliver_address_of_order" />

            <ImageView
                android:id="@+id/iv_edit_payment_against_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_18sp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@+id/hd_payment_against_order"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hd_payment_against_order"
                app:tint="@color/black" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_payment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_22sp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/size_22sp"
                android:layout_marginBottom="@dimen/size_22sp"
                android:background="@drawable/cart_item_bg"
                android:paddingTop="@dimen/size_16sp"
                android:paddingBottom="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/hd_payment_against_order">

                <TextView
                    android:id="@+id/tv_payment_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_22sp"
                    android:layout_marginEnd="@dimen/size_22sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/product_category_color"
                    android:textSize="@dimen/size_10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_payment_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_22sp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginEnd="@dimen/size_22sp"
