<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustPan">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginEnd="15dp"
            android:padding="@dimen/size_16sp"
            android:layout_marginTop="@dimen/dimen_6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/what_is_your_day_plan"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toStartOf="@+id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_back"
            android:background="@color/divider_color" />


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimen_50dp"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintBottom_toTopOf="@+id/linBottom"
            app:layout_constraintHeight_min="400dp"
            app:layout_constraintHeight_max="600dp"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_20dp">

                <TextView
                    android:id="@+id/hd_select_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/select_activity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_activity_type_start_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:background="@drawable/gray_stroke_10dp_empty_bg"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hd_select_activity">

                    <TextView
                        android:id="@+id/tv_regular_beat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_stroke_let_top_corner_10dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/regular_beat"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_joint_activity"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_regular_beat"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_beat_plan_tab"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_regular_beat"
                        app:layout_constraintStart_toStartOf="@+id/tv_regular_beat"
                        app:layout_constraintTop_toTopOf="@+id/tv_regular_beat"
                        app:tint="@color/toogle_color" />

                    <TextView
                        android:id="@+id/tv_joint_activity"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/gray_stroke_right_top_corner_10dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/joint_activity"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_regular_beat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tv_regular_beat"
                        app:layout_constraintTop_toTopOf="@+id/tv_regular_beat" />

                    <ImageView
                        android:id="@+id/iv_joint_activity"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_record_activity"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_joint_activity"
                        app:layout_constraintStart_toStartOf="@+id/tv_joint_activity"
                        app:layout_constraintTop_toTopOf="@+id/tv_joint_activity"
                        app:tint="@color/toogle_color" />

                    <TextView
                        android:id="@+id/tv_mark_leave"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_stroke_half_dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/mark_leave"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_h_o_visit"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_regular_beat" />

                    <ImageView
                        android:id="@+id/iv_mark_leave"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_mark_leave"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_mark_leave"
                        app:layout_constraintStart_toStartOf="@+id/tv_mark_leave"
                        app:layout_constraintTop_toTopOf="@+id/tv_mark_leave" />

                    <TextView
                        android:id="@+id/tv_h_o_visit"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/gray_stroke_half_dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/ho_visit"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_mark_leave"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tv_mark_leave"
                        app:layout_constraintTop_toTopOf="@+id/tv_mark_leave" />


                    <ImageView
                        android:id="@+id/iv_visit_office"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_head_office_visit"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_h_o_visit"
                        app:layout_constraintStart_toStartOf="@+id/tv_h_o_visit"
                        app:layout_constraintTop_toTopOf="@+id/tv_h_o_visit" />

                    <TextView
                        android:id="@+id/tv_distributor_visit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_stroke_left_bottom_corner_10dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_others_activity"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_mark_leave" />


                    <ImageView
                        android:id="@+id/iv_distributor_visit"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_customer_tab"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_distributor_visit"
                        app:layout_constraintStart_toStartOf="@+id/tv_distributor_visit"
                        app:layout_constraintTop_toTopOf="@+id/tv_distributor_visit"
                        app:tint="@color/toogle_color" />

                    <TextView
                        android:id="@+id/tv_others_activity"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/gray_stroke_right_bottom_corner_10dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/others"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_distributor_visit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tv_distributor_visit"
                        app:layout_constraintTop_toTopOf="@+id/tv_distributor_visit" />

                    <ImageView
                        android:id="@+id/iv_others"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_beat_plan_tab"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_others_activity"
                        app:layout_constraintStart_toStartOf="@+id/tv_others_activity"
                        app:layout_constraintTop_toTopOf="@+id/tv_others_activity"
                        app:tint="@color/toogle_color" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_activity_type_end_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:background="@drawable/gray_stroke_10dp_empty_bg"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_staff_for_joint_activity">

                    <TextView
                        android:id="@+id/tv_half_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_stroke_left_rounded_corner_10dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/half_day"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_full_day"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_half_day"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_half_day"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_half_day"
                        app:layout_constraintStart_toStartOf="@+id/tv_half_day"
                        app:layout_constraintTop_toTopOf="@+id/tv_half_day"
                        app:tint="@color/toogle_color" />

                    <TextView
                        android:id="@+id/tv_full_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_stroke_right_rounded_corner_10dp_empty_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="@dimen/dimen_50dp"
                        android:paddingTop="@dimen/size_16sp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="@dimen/size_16sp"
                        android:text="@string/full_day"
                        android:textColor="@color/leve_text_color"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_half_day"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/tv_half_day"
                        app:layout_constraintTop_toTopOf="@+id/tv_half_day" />

                    <ImageView
                        android:id="@+id/iv_full_day"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_full_day"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_full_day"
                        app:layout_constraintStart_toStartOf="@+id/tv_full_day"
                        app:layout_constraintTop_toTopOf="@+id/tv_full_day"
                        app:tint="@color/toogle_color" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_staff_for_joint_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/size_16sp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/cl_activity_type_start_day">

                    <TextView
                        android:id="@+id/tv_joint_staff_activity_with_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_stroke_4dp_empty_bg"
                        android:drawableEnd="@drawable/ic_drop_down_holo"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="@dimen/size_16sp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp"
                        android:text="Add joint activity staff"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_staff_list_for_assign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gray_stroke_4dp_empty_bg"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/tv_joint_staff_activity_with_count">

                        <EditText
                            android:id="@+id/et_search_staff"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_top_corner_10dp_bg"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/et_search_staff"
                            android:imeOptions="actionSearch"
                            android:paddingStart="44dp"
                            android:paddingTop="@dimen/dimen_8dp"
                            android:paddingEnd="@dimen/dimen_50dp"
                            android:paddingBottom="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:textColorHint="#6A6A6A"
                            android:textSize="@dimen/size_14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_search_staff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingStart="@dimen/dimen_15dp"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:paddingEnd="@dimen/size_10sp"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:src="@mipmap/ic_search"
                            app:layout_constraintBottom_toBottomOf="@+id/et_search_staff"
                            app:layout_constraintStart_toStartOf="@+id/et_search_staff"
                            app:layout_constraintTop_toTopOf="@+id/et_search_staff" />

                        <ImageView
                            android:id="@+id/iv_clear_search_staff"
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/size_12sp"
                            android:background="@drawable/circle_blue_gradient"
                            android:padding="@dimen/dimen_8dp"
                            android:src="@drawable/ic_close"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/et_search_staff"
                            app:layout_constraintEnd_toEndOf="@+id/et_search_staff"
                            app:layout_constraintTop_toTopOf="@+id/et_search_staff"
                            app:tint="@color/white" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_staff_list_for_assign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:minHeight="@dimen/dimen_100dp"
                            android:overScrollMode="never"
                            android:scrollIndicators="end"
                            android:nestedScrollingEnabled="true"
                            android:scrollbarSize="@dimen/size_10sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_max="300dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_search_staff" />

                        <ProgressBar
                            android:id="@+id/progress_bar_staff_list_pagination"
                            android:layout_width="@dimen/size_24sp"
                            android:layout_height="@dimen/size_24sp"
                            android:padding="10dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rv_staff_list_for_assign" />

                        <TextView
                            android:id="@+id/tv_no_staff_found"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/size_16sp"
                            android:text="@string/no_staff_found"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/et_search_staff" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_write_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/size_16sp"
                    android:layout_marginEnd="@dimen/size_16sp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/cl_activity_type_end_day">

                    <TextView
                        android:id="@+id/hd_write_a_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="@dimen/dimen_4dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp"
                        android:text="@string/write_a_comment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        app:drawableStartCompat="@drawable/ic_write_comment"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_write_comment"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/dimen_4dp"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="@+id/hd_write_a_comment"
                        app:layout_constraintEnd_toEndOf="@+id/hd_write_a_comment"
                        app:layout_constraintTop_toTopOf="@+id/hd_write_a_comment"
                        app:tint="#312B81" />

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_16sp"
                        android:background="@drawable/gray_stroke_4dp_empty_bg"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top"
                        android:lines="3"
                        android:padding="@dimen/size_16sp"
                        android:textColorHint="#6A6A6A"
                        android:textSize="@dimen/size_14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hd_write_a_comment" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/doted_line"
                    android:backgroundTint="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@+id/cl_write_comment" />

                <TextView
                    android:id="@+id/hd_take_selfie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/dimen_4dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="14dp"
                    android:text="@string/let_us_take_selfie"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14sp"
                    app:drawableStartCompat="@drawable/ic_selfie"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:src="@drawable/ic_camera_plus"
                    app:layout_constraintBottom_toBottomOf="@+id/hd_take_selfie"
                    app:layout_constraintEnd_toEndOf="@+id/hd_take_selfie"
                    app:layout_constraintTop_toTopOf="@+id/hd_take_selfie"
                    app:tint="#312B81" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_selfie_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/hd_take_selfie" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
