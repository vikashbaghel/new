        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_4dp"
        android:text="@string/achieved"
        android:textColor="@color/sale_overview_heading"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/hd_order_percentage"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintStart_toEndOf="@+id/hd_orders"
        app:layout_constraintTop_toTopOf="@+id/hd_customer" />

    <TextView
        android:id="@+id/hd_order_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/dimen_4dp"
        android:text="@string/percent"
        android:textColor="@color/sale_overview_heading"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@+id/hd_sale_value"
        app:layout_constraintTop_toTopOf="@+id/hd_customer" />

    <View
