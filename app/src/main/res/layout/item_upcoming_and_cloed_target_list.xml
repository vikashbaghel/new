<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:background="@drawable/home_card_style"
    android:paddingBottom="@dimen/dimen_20dp">

    <TextView
        android:id="@+id/tv_staff_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/targets"
        app:layout_constraintEnd_toStartOf="@+id/tv_recurring"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recurring"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/size_12sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:drawablePadding="@dimen/dimen_6dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/recurring"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_12sp"
        android:visibility="visible"
        app:drawableStartCompat="@drawable/ic_recurring_calender"
        app:layout_constraintBottom_toBottomOf="@+id/tv_staff_name"
        app:layout_constraintStart_toEndOf="@+id/tv_staff_name"
        app:layout_constraintTop_toTopOf="@+id/tv_staff_name" />

    <TextView
        android:id="@+id/tv_assigned_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/targets"
        android:textColor="@color/sales_text_color_light_black"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_target_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_staff_name" />

    <TextView
        android:id="@+id/tv_target_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_12sp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:text="@string/targets"
        android:textColor="@color/sales_text_color_light_black"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_drop_arrow"
        app:layout_constraintStart_toEndOf="@+id/tv_assigned_by"
        app:layout_constraintTop_toTopOf="@+id/tv_assigned_by" />

    <ImageView
        android:id="@+id/iv_drop_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:src="@drawable/ic_drop_down_holo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_assigned_by" />

    <TextView
        android:id="@+id/hd_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/size_20sp"
        android:fontFamily="@font/poppins_medium"
        android:paddingEnd="@dimen/dimen_4dp"
        android:text="@string/name_without_star"
        android:textColor="@color/sale_overview_heading"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintEnd_toStartOf="@+id/hd_orders"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_weight="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_assigned_by" />

