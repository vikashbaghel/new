<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hd_active_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/active_targets"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/hd_target_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:text="@string/view_all"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/hd_active_staff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hd_active_staff"
        app:layout_constraintTop_toTopOf="@+id/hd_active_staff" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:background="@drawable/home_card_style"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/hd_active_staff">

        <TextView
            android:id="@+id/tv_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/targets"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recurring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:drawablePadding="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/recurring"
            android:textColor="@color/leve_text_color"
            android:textSize="@dimen/size_12sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_recurring_calender"
            app:layout_constraintBottom_toBottomOf="@+id/tv_staff_name"
            app:layout_constraintStart_toEndOf="@+id/tv_staff_name"
            app:layout_constraintTop_toTopOf="@+id/tv_staff_name" />

        <TextView
            android:id="@+id/tv_assigned_by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/targets"
            android:textColor="@color/sales_text_color_light_black"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_target_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_staff_name" />

        <TextView
            android:id="@+id/tv_target_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/targets"
            android:textColor="@color/sales_text_color_light_black"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_assigned_by"
            app:layout_constraintTop_toTopOf="@+id/tv_assigned_by" />


        <TextView
            android:id="@+id/hd_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/size_16sp"
            android:fontFamily="@font/poppins_medium"
            android:paddingEnd="@dimen/dimen_4dp"
            android:text="@string/name_without_star"
            android:textColor="@color/sale_overview_heading"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toStartOf="@+id/hd_orders"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_weight="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_assigned_by" />

        <TextView
            android:id="@+id/hd_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="@dimen/dimen_4dp"
            android:paddingEnd="@dimen/dimen_4dp"
            android:text="@string/target"
            android:textColor="@color/sale_overview_heading"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toStartOf="@+id/hd_sale_value"
            app:layout_constraintHorizontal_weight="0.7"
            app:layout_constraintStart_toEndOf="@+id/hd_customer"
            app:layout_constraintTop_toTopOf="@+id/hd_customer" />

        <TextView
            android:id="@+id/hd_sale_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="@dimen/dimen_4dp"
            android:paddingEnd="@dimen/dimen_4dp"
            android:text="@string/achieved"
            android:textColor="@color/sale_overview_heading"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toStartOf="@+id/hd_order_percentage"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_weight="0.7"
            app:layout_constraintStart_toEndOf="@+id/hd_orders"
            app:layout_constraintTop_toTopOf="@+id/hd_customer" />

        <TextView
            android:id="@+id/hd_order_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="@dimen/dimen_4dp"
            android:text="@string/percent"
            android:textColor="@color/sale_overview_heading"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_weight="0.4"
            app:layout_constraintStart_toEndOf="@+id/hd_sale_value"
            app:layout_constraintTop_toTopOf="@+id/hd_customer" />


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_10sp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/hd_customer" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_empty_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_empty_data"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_empty_data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/please_try_another_keyword"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_empty_data" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>