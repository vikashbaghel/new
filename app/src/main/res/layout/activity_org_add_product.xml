<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.product.AddProductActivity">


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:shadowColor="@color/analytics_view_drop_shadow_color"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/add_product"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_close"
        app:layout_constraintTop_toTopOf="@+id/img_close" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_close">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/add_category"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:background="@drawable/add_category_button_style"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="12dp"
                android:paddingEnd="@dimen/size_12sp"
                android:text="Add New"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_add_category" />

            <AutoCompleteTextView
                android:id="@+id/ac_tv_category"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:maxLines="1"
                android:textSize="@dimen/size_16sp"
                android:paddingStart="@dimen/size_16sp"
                android:dropDownHeight="200dp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_category" />


            <TextView
                android:id="@+id/tv_name_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/product_name"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ac_tv_category" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="2"
                android:paddingStart="@dimen/size_16sp"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/size_16sp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_hd" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/product_brand"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="@+id/et_product_brand"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />

            <EditText
                android:id="@+id/et_product_brand"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintEnd_toStartOf="@+id/et_product_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_code_hd" />

            <TextView
                android:id="@+id/tv_name_code_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/product_code"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="@+id/et_product_code"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />

            <EditText
                android:id="@+id/et_product_code"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/size_16sp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/et_product_brand"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_code_hd" />


            <TextView
                android:id="@+id/tv_hsn_code_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/hsn_code"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_product_code" />

            <EditText
                android:id="@+id/et_hsn_code"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:maxLength="8"
                android:maxLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_hsn_code_hd" />

            <TextView
                android:id="@+id/tv_image_hd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/product_image"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_hsn_code" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_hd" />

            <ImageView
                android:id="@+id/iv_radio_button"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/circle"
                android:elevation="@dimen/size_10sp"
                android:padding="1dp"
                android:src="@drawable/check"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_images" />

            <TextView
                android:id="@+id/tv_image_selected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/select_image_for_making_as_a_display_picture"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_radio_button"
                app:layout_constraintTop_toTopOf="@+id/iv_radio_button" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_select_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12sp"
                android:visibility="gone"
                app:constraint_referenced_ids="iv_radio_button, tv_image_selected"
                app:layout_constraintTop_toBottomOf="@+id/rv_images" />

            <TextView
                android:id="@+id/tv_description_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_selected" />

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:maxLines="20"
                android:minLines="4"
                android:paddingStart="12dp"
                android:paddingTop="@dimen/size_12sp"
                android:paddingEnd="@dimen/size_12sp"
                android:paddingBottom="@dimen/size_12sp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_description_hd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/max_characters_in_description"
                android:textColor="@color/black"
                android:textSize="@dimen/size_10sp"
                app:layout_constraintBottom_toBottomOf="@+id/edt_description"
                app:layout_constraintEnd_toEndOf="@+id/edt_description" />


            <TextView
                android:id="@+id/tv_mrp_price_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/mrp_price"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_description" />

            <EditText
                android:id="@+id/edt_mrp_price"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:drawableStart="@drawable/ic_indian_rupee_symbol"
                android:drawablePadding="@dimen/size_12sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_mrp_unit"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mrp_price_hd" />


            <TextView
                android:id="@+id/tv_mrp_unit_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/unit"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_mrp_unit"
                app:layout_constraintTop_toBottomOf="@+id/edt_description" />

            <TextView
                android:id="@+id/tv_mrp_unit"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:drawablePadding="@dimen/size_12sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="@+id/edt_mrp_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toEndOf="@+id/edt_mrp_price"
                app:layout_constraintTop_toTopOf="@+id/edt_mrp_price" />


            <TextView
                android:id="@+id/tv_price_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/display_price"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_mrp_price" />

            <EditText
                android:id="@+id/edt_price"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:drawableStart="@drawable/ic_indian_rupee_symbol"
                android:drawablePadding="@dimen/size_12sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_unit"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_price_hd" />

            <TextView
                android:id="@+id/tv_unit_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/unit"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_unit"
                app:layout_constraintTop_toBottomOf="@+id/edt_mrp_price" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:drawablePadding="@dimen/size_12sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="@+id/edt_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toEndOf="@+id/edt_price"
                app:layout_constraintTop_toTopOf="@+id/edt_price" />


            <TextView
                android:id="@+id/tv_gst_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/gst_in_percentage"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_price" />


            <Spinner
                android:id="@+id/spinner_gst"
                style="@style/SpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:paddingStart="@dimen/dimen_6dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_gst_hd" />


            <RadioGroup
                android:id="@+id/radioGroupGst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20sp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:orientation="horizontal"
                android:weightSum="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_gst">

                <RadioButton
                    android:id="@+id/rb_gst_inclusive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:checked="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/inclusive"
                    android:textSize="@dimen/size_14sp" />

                <RadioButton
                    android:id="@+id/rb_gst_exclusive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:checked="false"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/exclusive"
                    android:textSize="@dimen/size_14sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_packaging_unit_hd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_24sp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/packaging_unit"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_packaging__hd"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupGst" />

            <TextView
                android:id="@+id/tv_packaging__hd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20sp"
                android:layout_marginEnd="@dimen/size_20sp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/packaging_size_with_star"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_packaging_unit_hd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toEndOf="@+id/tv_packaging_unit_hd"
                app:layout_constraintTop_toTopOf="@+id/tv_packaging_unit_hd" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_packaging_unit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_12sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_packaging_unit_hd"
                tools:itemCount="2"
                tools:listitem="@layout/packaging_unit_item" />

            <TextView
                android:id="@+id/btn_add_packaging_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:padding="@dimen/size_10sp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/add_packaging_unit"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_packaging_unit" />

            <CheckBox
                android:id="@+id/cb_mark_out_of_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_18sp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:text="@string/mark_out_of_stock"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_packaging_level" />

            <TextView
                android:id="@+id/tv_specification_hd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/specification"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_mark_out_of_stock" />


            <EditText
                android:id="@+id/edt_key"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:hint="@string/name_without_star"
                android:maxLines="1"
                android:minLines="1"
                android:paddingStart="@dimen/size_16sp"
                android:paddingEnd="@dimen/size_16sp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/beat_hint_color"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_specification_hd" />

            <EditText
                android:id="@+id/edt_specification_description"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:background="@drawable/edit_text_white_with_stroke_background"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:hint="@string/description"
                android:padding="@dimen/size_16sp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/beat_hint_color"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintTop_toBottomOf="@+id/edt_key" />


            <TextView
                android:id="@+id/btn_add_specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/size_20sp"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:background="@drawable/add_category_button_style"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="@dimen/size_24sp"
                android:paddingTop="@dimen/dimen_6dp"
                android:paddingEnd="@dimen/size_24sp"
                android:paddingBottom="@dimen/dimen_6dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_specification_description" />


            <TextView
                android:id="@+id/added_specification_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/added_specifications"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_specification_description" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_specification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/size_12sp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:elevation="5dp"
                android:padding="6dp"
                app:layout_constraintTop_toBottomOf="@+id/added_specification_hd"
                tools:itemCount="2"
                tools:listitem="@layout/specification_item" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_specification">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_rectangle_bg_bg"
                    android:backgroundTint="#2DAD33"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="@dimen/dimen_40dp"
                    android:paddingEnd="@dimen/dimen_40dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/btn_cancel"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/border_gray"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/dimen_40dp"
                    android:paddingEnd="@dimen/dimen_40dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_add_product"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>