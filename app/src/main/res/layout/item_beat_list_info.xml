<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_16sp"
    android:layout_marginEnd="@dimen/size_16sp"
    android:layout_marginBottom="@dimen/size_12sp"
    android:background="@drawable/white_border_linear_gradient"
    android:paddingTop="@dimen/size_10sp"
    android:paddingBottom="@dimen/dimen_20dp">

    <TextView
        android:id="@+id/tv_beat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_10sp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:paddingStart="@dimen/size_12sp"
        android:paddingTop="@dimen/size_14sp"
        android:paddingEnd="@dimen/size_12sp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:src="@drawable/ic_icon_ionic_ios_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#6A6A6A" />

    <TextView
        android:id="@+id/tv_locality_and_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_beat_name" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_customer"
        android:layout_width="@dimen/size_24sp"
        android:layout_height="@dimen/size_24sp"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_10sp"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_no_customer_found"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_locality_and_customer"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset"
        app:strokeColor="@color/light_divider_gray_color"
        app:strokeWidth="@dimen/dimen_1dp" />

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10sp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/sales_text_color_light_black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toTopOf="@+id/iv_customer" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_customer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="iv_customer, tv_customer_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_locality_and_customer" />

</androidx.constraintlayout.widget.ConstraintLayout>