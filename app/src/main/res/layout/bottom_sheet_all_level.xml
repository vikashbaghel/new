<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginEnd="5dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_margin="@dimen/dimen_2dp"
        android:background="@drawable/bottomsheet_bg"
        android:padding="@dimen/dimen_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/order_placed_to"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
       app:layout_constraintTop_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@color/color_DDDDDD"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_10dp"
        android:id="@+id/rv_customer_type"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_all_level"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:elevation="@dimen/size_10sp"
        android:text="@string/clear"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/size_16sp"
        android:padding="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:textColor="#312B81"
        app:layout_constraintStart_toEndOf="@+id/btn_apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_customer_type" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_apply"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/rectangle_blue_gradient"
        android:elevation="@dimen/size_10sp"
        android:text="@string/apply"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/size_16sp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:visibility="visible"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_customer_type" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>