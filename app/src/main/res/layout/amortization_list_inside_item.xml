<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.overview.OverViewActivity">

        <LinearLayout
            android:padding="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txv_payment"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/amortization_title_text_size"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:shadowColor="#29000000"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/txv_amount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/amortization_title_text_size"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:shadowColor="#29000000"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txv_interest"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/amortization_title_text_size"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:shadowColor="#29000000"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/txv_principal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/amortization_title_text_size"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:shadowColor="#29000000"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/txv_balance"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/amortization_title_text_size"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:shadowColor="#29000000"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>