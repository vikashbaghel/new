<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/white_border_linear_rounded_gradient"
        android:paddingTop="18dp"
        android:paddingBottom="@dimen/size_16sp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/beat_plan_name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <EditText
            android:id="@+id/et_beat_plan_name"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/hd_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/start_date"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_beat_plan_name" />

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_14sp"
            app:drawableEndCompat="@drawable/ic_calender_green"
            app:layout_constraintEnd_toStartOf="@+id/tv_end_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hd_start_date" />


        <TextView
            android:id="@+id/hd_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/end_date"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_end_date"
            app:layout_constraintStart_toStartOf="@+id/tv_end_date" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/size_12sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minLines="1"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_14sp"
            app:drawableEndCompat="@drawable/ic_calender_green"
            app:layout_constraintBottom_toBottomOf="@+id/tv_start_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_start_date"
            app:layout_constraintTop_toTopOf="@+id/tv_start_date" />


        <TextView
            android:id="@+id/tv_date_change_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:drawablePadding="@dimen/size_12sp"
            android:text="@string/you_can_not_change_the_date"
            android:textColor="@color/red"
            android:textSize="@dimen/size_12sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_info"
            app:drawableTint="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/border_gray"
        android:elevation="@dimen/size_10sp"
        android:text="@string/cancel"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add"
        app:layout_constraintEnd_toStartOf="@+id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_add" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@color/filter_proceed_green"
        android:elevation="@dimen/size_10sp"
        android:text="@string/proceed"
        android:textAllCaps="true"
        android:textSize="@dimen/size_16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>