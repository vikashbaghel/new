<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/option_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_margin="@dimen/size_10sp"
        android:paddingBottom="12dp"
        android:paddingStart="@dimen/size_16sp"
        android:paddingEnd="@dimen/size_16sp"
        android:background="@drawable/gray_stroke_707070_4dp_empty_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/product_category_color"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/size_14sp"
        android:text="Option Name" />

</androidx.constraintlayout.widget.ConstraintLayout>