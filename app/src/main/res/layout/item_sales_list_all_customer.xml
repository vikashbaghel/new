<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/white_border_linear_rounded_gradient"
    android:elevation="5dp">

    <com.app.rupyz.generic.custom.VerticalTextView
        android:id="@+id/tv_customer_level"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/order_close_background"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/dimen_5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/size_11sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_customer"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@color/white"
        android:src="@mipmap/ic_no_customer_found"
        app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10DP" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_10dp"
        android:paddingStart="@dimen/size_18sp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/size_18sp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:src="@drawable/ic_icon_ionic_ios_more"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:text="cbhjasbj"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@+id/iv_more"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvDistributorsCount"
        app:layout_goneMarginEnd="@dimen/size_14sp" />
    

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_parent_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/color_727176"
        android:textSize="@dimen/size_12sp"
        android:visibility="visible"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintBottom_toTopOf="@+id/tvDistributorsCount"
        app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDistributorsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:drawablePadding="@dimen/dimen_9dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_12sp"
        android:visibility="visible"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer"
        app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
        app:layout_constraintStart_toEndOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />


    <ImageView
        android:id="@+id/iv_phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_10sp"
        android:src="@drawable/ic_order_call"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_more" />




    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
        app:layout_constraintTop_toBottomOf="@+id/iv_customer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_activity"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/new_order_button_background"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_10dp"
        android:text="@string/choose_activity"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp"
        android:drawableEnd="@drawable/ic_drop_down_gray"
        android:drawableTint="@color/white"
        android:drawablePadding="@dimen/dimen_15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_checked_in"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/new_order_button_background"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_30dp"
        android:text="Checked-in "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp"
        android:drawablePadding="@dimen/dimen_15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_new_order"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginStart="@dimen/size_15sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:visibility="gone"
        android:background="@drawable/new_order_button_background"
        android:drawablePadding="@dimen/size_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_activity"
        app:layout_constraintTop_toBottomOf="@+id/view1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingStart="@dimen/size_20sp"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingEnd="@dimen/size_24sp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:text="@string/check_in"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12sp"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:background="@color/color_D6D6D6"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_pop"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_marginVertical="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_drop_down_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_location"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:drawablePadding="@dimen/dimen_4dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lines="1"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:visibility="visible"
        app:drawableStartCompat="@drawable/ic_setting_location_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_new_order"
        app:layout_constraintStart_toStartOf="@+id/iv_customer"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_order"
        app:layout_goneMarginTop="@dimen/dimen_10dp" />

    <TextView
        android:id="@+id/tv_offline_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="@dimen/dimen_12dp"
        android:text="@string/offline"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/tv_offline_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_20dp"
        android:textColor="@color/biometric_error_color"
        android:textSize="@dimen/dimen_12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/tv_offline_mode" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="view2, tv_offline_mode"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_order" />

</androidx.constraintlayout.widget.ConstraintLayout>