<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp">

    <TextView
        android:id="@+id/txv_specification_number"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_24sp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="8dp"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:background="@drawable/white_circle_bg_style"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="#00000029"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp" />

    <TextView
        android:id="@+id/txv_specification_key"
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/txv_specification_number"
        app:layout_constraintEnd_toStartOf="@+id/img_delete_specification"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:shadowColor="#00000029"
        android:text="Material_1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp" />

    <ImageView
        android:id="@+id/img_delete_specification"
        android:layout_width="@dimen/dimen_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/dimen_30dp"
        android:padding="@dimen/dimen_6dp"
        android:background="@drawable/white_circle_bg_style"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete" />


    <TextView
        android:id="@+id/txv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/img_delete_specification"
        app:layout_constraintStart_toStartOf="@+id/txv_specification_key"
        android:layout_marginEnd="@dimen/size_12sp"
        app:layout_constraintTop_toBottomOf="@+id/txv_specification_key"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:paddingEnd="8dp"
        android:text=""
        android:textColor="#4E4E4E"
        android:textSize="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>