<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg">


    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/network_search_edit_text_style"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/et_search"
        android:imeOptions="actionSearch"
        android:padding="@dimen/dimen_12dp"
        android:singleLine="true"
        android:textColorHint="#6A6A6A"
        android:textSize="@dimen/size_12sp"
        android:ellipsize="end"
        android:paddingStart="@dimen/dimen_12dp"
        android:paddingEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:paddingStart="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:src="@mipmap/ic_search" />

    <HorizontalScrollView
        android:id="@+id/rv_filer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@color/white"
        android:elevation="@dimen/dimen_8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp">

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:padding="@dimen/dimen_10dp"
                android:src="@drawable/filter"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_type_org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:background="@drawable/filter_non_selected_background"
                android:paddingStart="@dimen/size_14sp"
                android:paddingTop="@dimen/dimen_6dp"
                android:paddingEnd="@dimen/size_14sp"
                android:paddingBottom="@dimen/dimen_6dp"
                android:text="@string/organization"
                android:textColor="@color/tab_un_selected_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_filter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:background="@drawable/filter_non_selected_background"
                android:drawablePadding="@dimen/dimen_4dp"
                android:paddingStart="@dimen/size_14sp"
                android:paddingTop="@dimen/dimen_6dp"
                android:paddingEnd="@dimen/size_14sp"
                android:paddingBottom="@dimen/dimen_6dp"
                android:text="@string/product"
                android:textColor="@color/tab_un_selected_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_type_org"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_location_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:background="@drawable/filter_non_selected_background"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawablePadding="@dimen/dimen_4dp"
                android:paddingStart="@dimen/size_14sp"
                android:paddingTop="@dimen/dimen_4dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_4dp"
                android:text="@string/locations"
                android:textColor="@color/tab_un_selected_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_product_type"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_badge_filer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:background="@drawable/filter_non_selected_background"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawablePadding="@dimen/dimen_4dp"
                android:paddingStart="@dimen/size_14sp"
                android:paddingTop="@dimen/dimen_4dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_4dp"
                android:text="@string/badge"
                android:textColor="@color/tab_un_selected_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_location_filter"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_filer_item">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/tv_business_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="123 result"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/size_15sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_business_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:clipToPadding="false"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/size_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_business_count" />

            <TextView
                android:id="@+id/tv_see_all_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/connect_background_with_border"
                android:paddingStart="@dimen/size_18sp"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/size_18sp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:text="@string/see_all_business_results"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_business_item" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_business_count, rv_business_item, tv_see_all_business"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="123 result"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/size_15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_see_all_business" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:clipToPadding="false"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/size_16sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_count" />

            <TextView
                android:id="@+id/tv_see_all_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/connect_background_with_border"
                android:paddingStart="@dimen/size_18sp"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/size_18sp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:text="@string/see_all_product_results"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_product_item" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_product_count, rv_product_item, tv_see_all_products"
                app:layout_constraintTop_toBottomOf="@+id/rv_product_item" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_suggestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_filer_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_recent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/recent"
            android:textSize="@dimen/size_18sp"
            android:padding="@dimen/dimen_12dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_filer_item" />


</androidx.constraintlayout.widget.ConstraintLayout>