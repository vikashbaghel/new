<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    tools:context=".ui.overview.OverViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/home_card_round_background"
        android:orientation="vertical"
        android:padding="@dimen/dimen_15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_subscriber_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Fullerton India Credit"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Unsecured Business Loan"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:background="@drawable/debt_info_style"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Amount"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txt_sanction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Outstanding Amount"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txt_outstanding_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:background="@drawable/debt_info_style"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Loan sanctioned date"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txt_sanction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Rate"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txv_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:padding="0dp"
                android:text=""
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="EMI Date"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txv_emi_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:padding="0dp"
                android:text=""
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="0dp"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="#4E8ED9"
                    android:textSize="@dimen/size_12sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:src="@drawable/ic_right_arrow" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:background="@drawable/debt_info_style"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Tenure"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txv_tenure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="EMI"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txv_emi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_regular"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:visibility="gone"
            android:background="@drawable/debt_info_style"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Annual obligations"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/debt_profile_top_margin"
            android:padding="@dimen/debt_profile_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Last EMI Date"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12sp" />


        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>