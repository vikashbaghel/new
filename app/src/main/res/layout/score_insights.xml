                            <TextView
                                android:id="@+id/txt_repayment_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Not Available"
                                android:textColor="#3EB643"
                                android:textSize="@dimen/size_10sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_repayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/details_button_style"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:layout_marginTop="@dimen/dimen_3dp"
                            android:layout_marginRight="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Details"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/size_10sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!--    Score Insights &#45;&#45; Credit utilisation design tile-->

            <LinearLayout
                android:layout_width="@dimen/score_insight_card_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/home_card_style"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp">

                <ImageView
                    android:layout_width="@dimen/score_insight_icon_size"
                    android:layout_height="@dimen/score_insight_icon_size"
                    android:src="@mipmap/score_insights_utilisation" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
