<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border_linear_gradient_without_stroke"
        android:elevation="@dimen/size_10sp"
        android:padding="@dimen/dimen_5dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_filter_range"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/size_20sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:drawablePadding="@dimen/size_20sp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:hint="@string/range_this_month"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:drawableEndCompat="@drawable/ic_drop_down_gray"
            app:drawableStartCompat="@drawable/ic_calendar_today"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/tv_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:gravity="center"
            android:padding="@dimen/size_10sp"
            android:src="@drawable/ic_filter_gray"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/tv_sort_by"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_817EB1" />

        <ImageView
            android:id="@+id/tv_sort_by"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:padding="@dimen/size_10sp"
            android:src="@drawable/ic_sort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_817EB1" />


        <TextView
            android:id="@+id/tv_filter_count"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:layout_gravity="center"
            android:background="@drawable/circle_red_gradient"
            android:backgroundTint="@color/payment_rejected_text_color"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_1dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:translationX="@dimen/dimen_4dp"
            android:translationY="-10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tv_filter"
            app:layout_constraintTop_toTopOf="@+id/tv_filter" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:drawableStart="@mipmap/ic_search"
            android:drawablePadding="@dimen/size_10sp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_customer"
            android:imeOptions="actionSearch"
            android:paddingStart="@dimen/size_16sp"
            android:paddingTop="@dimen/size_10sp"
            android:paddingEnd="@dimen/dimen_50dp"
            android:paddingBottom="@dimen/size_10sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/beat_hint_color"
            android:textSize="@dimen/size_14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/cl_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:padding="@dimen/size_13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <ProgressBar
        android:id="@+id/progress_bar_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_empty_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/no_result_found"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_empty_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_empty_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:src="@drawable/searching_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_error_message" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>