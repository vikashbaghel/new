<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginTop="@dimen/size_12sp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_connection"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_connection_name"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/size_12sp"
            android:layout_marginStart="@dimen/size_12sp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="J. P. Morgan"
            android:textColor="@color/black"
            android:textSize="@dimen/size_11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_connection"
            app:layout_constraintTop_toBottomOf="@+id/iv_connection" />

        <TextView
            android:id="@+id/tv_sold_by_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/sold_by"
            android:textColor="@color/black"
            android:textSize="7sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sold_by"
            app:layout_constraintStart_toStartOf="@+id/iv_connection"
            app:layout_constraintTop_toBottomOf="@+id/tv_connection_name" />


        <TextView
            android:id="@+id/tv_sold_by"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:maxLines="1"
            android:fontFamily="@font/poppins_regular"
            android:paddingEnd="@dimen/size_24sp"
            android:text="@string/sold_by"
            android:textColor="@color/text_color_blue"
            android:textSize="9sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_sold_by_heading"
            app:layout_constraintTop_toBottomOf="@+id/tv_connection_name" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="tv_sold_by_heading, tv_sold_by"
            app:layout_constraintTop_toBottomOf="@+id/tv_connection_name" />


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12sp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:drawableLeft="@drawable/ic_location_black"
            android:drawablePadding="@dimen/dimen_4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Bangalore"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sold_by" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:drawableStart="@drawable/ic_indian_rupee_symbol"
            android:drawablePadding="@dimen/dimen_2dp"
            android:text="1234"
            android:fontFamily="@font/poppins_medium"
            android:visibility="visible"
            android:textColor="@color/black"
            android:textSize="@dimen/size_11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />


        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/size_12sp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/size_12sp"
            android:background="@drawable/connection_item_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:src="@mipmap/ic_like"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/size_12sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/size_12sp"/>

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:drawablePadding="@dimen/dimen_2dp"
            android:visibility="gone"
            android:text="1234"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_like"
            app:layout_constraintStart_toEndOf="@+id/iv_like"
            app:layout_constraintTop_toTopOf="@+id/iv_like" />

        <ImageView
            android:id="@+id/iv_view"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:src="@drawable/ic_product_viewed"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/size_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:drawablePadding="@dimen/dimen_2dp"
            android:text="1234"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_view"
            app:layout_constraintStart_toEndOf="@+id/iv_view"
            app:layout_constraintTop_toTopOf="@+id/iv_view" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:src="@drawable/ic_video_share"
            android:padding="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_4dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/size_12sp"
            android:layout_marginStart="@dimen/size_12sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
