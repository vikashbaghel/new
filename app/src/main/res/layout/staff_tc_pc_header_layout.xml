<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tc"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="72dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:background="@drawable/white_border_linear_gradient"
        app:layout_constraintEnd_toStartOf="@+id/cl_pc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_tc"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:padding="2dp"
            android:src="@drawable/ic_beat_customer"
            app:layout_constraintBottom_toTopOf="@+id/hd_tc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tc"
            android:textColor="@color/color_727176"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_tc"
            app:layout_constraintStart_toStartOf="@+id/iv_tc"
            app:layout_constraintTop_toBottomOf="@+id/iv_tc" />

        <View
            android:id="@+id/view_tc"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:background="@color/color_DDDDDD"
            app:layout_constraintStart_toEndOf="@+id/iv_tc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tc_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_24sp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_tc"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pc"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="72dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@drawable/white_border_linear_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cl_tc"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_pc"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:src="@drawable/ic_order_tab"
            app:layout_constraintBottom_toTopOf="@+id/hd_pc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hd_pc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/pc"
            android:textColor="@color/color_727176"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_pc"
            app:layout_constraintStart_toStartOf="@+id/iv_pc"
            app:layout_constraintTop_toBottomOf="@+id/iv_pc" />

        <View
            android:id="@+id/view_pc"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:background="@color/color_DDDDDD"
            app:layout_constraintStart_toEndOf="@+id/iv_pc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pc_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_24sp"
            android:text="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/tv_order_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_pc"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_value"
            android:layout_width="0dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_14sp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_pc"
            app:layout_constraintTop_toBottomOf="@+id/tv_pc_count" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>