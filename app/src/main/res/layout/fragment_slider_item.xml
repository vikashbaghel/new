<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walkthrough_bg_style"
    tools:context=".ui.overview.OverViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="@dimen/walk_through_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center|left"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="@dimen/walk_through_image_width"
                android:layout_height="@dimen/walk_through_image_height"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_wt_report_score" />

            <TextView
                android:id="@+id/heading_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/walk_through_heading_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_two"
                android:layout_width="@dimen/walk_through_image_width"
                android:layout_height="@dimen/walk_through_image_height"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_wt_alert" />

            <TextView
                android:id="@+id/heading_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:scaleType="fitXY"
                android:textColor="@color/white"
                android:textSize="@dimen/walk_through_heading_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_three"
                android:layout_width="@dimen/walk_through_image_width"
                android:layout_height="@dimen/walk_through_image_height"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_wt_ai" />

            <TextView
                android:id="@+id/heading_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/walk_through_heading_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_four"
                android:layout_width="@dimen/walk_through_image_width"
                android:layout_height="@dimen/walk_through_image_height"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_wt_suggestion" />

            <TextView
                android:id="@+id/heading_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/walk_through_heading_text_size" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>