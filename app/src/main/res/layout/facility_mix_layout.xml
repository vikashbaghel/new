<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    tools:context=".ui.overview.OverViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_card_style"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Facility Mix"
                android:textColor="#141414"
                android:textSize="@dimen/size_16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Active"
                android:textColor="@color/green"
                android:textSize="@dimen/size_12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="@drawable/facility_mix_main_style"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/facility_mix_secured_pro"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/facility_mix_one_style"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/facility_mix_unsecured_pro"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_weight="20"
                android:background="@drawable/facility_mix_two_style"
                android:orientation="horizontal" />

        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/secured_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="start|center">

                <View
                    android:layout_width="7dp"
                    android:layout_height="9dp"
                    android:background="@color/working_capital_circle_color" />

                <TextView
                    android:id="@+id/txt_secured_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/secured_loan"
                    android:textColor="#141414"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/unsecured_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center|start">

                <View
                    android:layout_width="7dp"
                    android:layout_height="9dp"
                    android:background="@color/personal_loan_circle_color" />

                <TextView
                    android:id="@+id/txt_un_secured_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/unsecured_loan"
                    android:textColor="#141414"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

        </GridLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>