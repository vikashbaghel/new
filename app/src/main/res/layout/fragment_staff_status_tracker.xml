<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_ctb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16sp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/team_status"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_staffs_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/size_16sp"
                        android:background="@drawable/white_border_linear_gradient"
                        android:elevation="@dimen/size_10sp"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintTop_toBottomOf="@+id/tv_heading">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:layout_marginEnd="@dimen/dimen_2dp"
                            android:background="@color/white"
                            app:layout_collapseMode="pin"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_decrement_month"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginBottom="@dimen/dimen_2dp"
                                android:padding="@dimen/size_12sp"
                                android:rotation="180"
                                android:src="@drawable/ic_right_arrow"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_date"
                                app:layout_constraintEnd_toStartOf="@+id/tv_date"
                                app:layout_constraintTop_toTopOf="@+id/tv_date"
                                app:tint="@color/theme_purple" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:padding="@dimen/size_12sp"
                                android:text="date"
                                android:textColor="@color/theme_purple"
                                android:textSize="@dimen/size_15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_increment_month"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginBottom="@dimen/dimen_2dp"
                                android:padding="@dimen/size_12sp"
                                android:src="@drawable/ic_right_arrow"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_date"
                                app:layout_constraintStart_toEndOf="@+id/tv_date"
                                app:layout_constraintTop_toTopOf="@+id/tv_date"
                                app:tint="@color/theme_purple" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_active_staff"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/size_16sp"
                            android:paddingBottom="@dimen/size_16sp"
                            app:layout_constraintEnd_toStartOf="@+id/cl_on_leave_staff_staff"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cl_date">

                            <ImageView
                                android:id="@+id/iv_active"
                                android:layout_width="@dimen/dimen_8dp"
                                android:layout_height="@dimen/dimen_8dp"
                                android:background="@drawable/circle"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_active"
                                app:layout_constraintEnd_toStartOf="@+id/tv_active"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_active" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/active"
                                android:textColor="@color/color_727176"
                                android:textSize="@dimen/size_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iv_active"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_active_staff_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/filter_proceed_green"
                                android:textSize="@dimen/size_14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_active" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="@dimen/dimen_2dp"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/cl_active_staff"
                            app:layout_constraintStart_toEndOf="@+id/cl_active_staff"
                            app:layout_constraintTop_toTopOf="@+id/cl_active_staff" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_on_leave_staff_staff"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/size_16sp"
                            android:paddingBottom="@dimen/size_16sp"
                            app:layout_constraintEnd_toStartOf="@+id/cl_in_active_staff"
                            app:layout_constraintStart_toEndOf="@+id/cl_active_staff"
                            app:layout_constraintTop_toBottomOf="@+id/cl_date">

                            <ImageView
                                android:id="@+id/iv_on_leave_staff"
                                android:layout_width="@dimen/dimen_8dp"
                                android:layout_height="@dimen/dimen_8dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/out_of_stock_red"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_on_leave_staff"
                                app:layout_constraintEnd_toStartOf="@+id/tv_on_leave_staff"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_on_leave_staff" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_on_leave_staff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/leave"
                                android:textColor="@color/color_727176"
                                android:textSize="@dimen/size_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iv_on_leave_staff"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_on_leave_staff_staff_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/out_of_stock_red"
                                android:textSize="@dimen/size_14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_on_leave_staff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="@dimen/dimen_2dp"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/cl_on_leave_staff_staff"
                            app:layout_constraintStart_toEndOf="@+id/cl_on_leave_staff_staff"
                            app:layout_constraintTop_toTopOf="@+id/cl_on_leave_staff_staff" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_in_active_staff"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/size_16sp"
                            android:paddingBottom="@dimen/size_16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cl_on_leave_staff_staff"
                            app:layout_constraintTop_toBottomOf="@+id/cl_date">

                            <ImageView
                                android:id="@+id/iv_in_active"
                                android:layout_width="@dimen/dimen_8dp"
                                android:layout_height="@dimen/dimen_8dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/color_727176"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_in_active"
                                app:layout_constraintEnd_toStartOf="@+id/tv_in_active"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_in_active" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_in_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/inactive_product"
                                android:textColor="@color/color_727176"
                                android:textSize="@dimen/size_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iv_in_active"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_in_active_staff_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/color_727176"
                                android:textSize="@dimen/size_14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_in_active" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/sl_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:shimmer_auto_start="true"
                            app:shimmer_direction="left_to_right"
                            app:shimmer_repeat_mode="restart">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <include layout="@layout/shimmer_staff_status" />

                            </LinearLayout>


                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_team_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/teams_activity"
                        android:textAllCaps="true"
                        android:textColor="@color/color_727176"
                        android:textSize="@dimen/size_12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cl_staffs_status" />


                    <View
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:background="@color/color_DDDDDD"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_team_activity"
                        app:layout_constraintEnd_toStartOf="@+id/tv_team_activity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_team_activity" />


                    <View
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:background="@color/color_DDDDDD"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_team_activity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_team_activity"
                        app:layout_constraintTop_toTopOf="@+id/tv_team_activity" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-18dp"
                    app:layout_collapseMode="pin"
                    app:layout_constraintTop_toBottomOf="@+id/cl_ctb">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@drawable/white_border_linear_gradient_without_stroke"
                        android:elevation="@dimen/size_10sp"
                        android:padding="@dimen/dimen_5dp"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_filter_range"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_40dp"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/size_20sp"
                            android:layout_marginEnd="@dimen/size_16sp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:drawablePadding="@dimen/dimen_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:text="@string/range_today"
                            android:padding="@dimen/dimen_5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/size_12sp"
                            app:drawableEndCompat="@drawable/ic_drop_down_gray"
                            app:drawableStartCompat="@drawable/ic_calendar_today"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tv_filter"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/tv_filter"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/size_16sp"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android:layout_marginEnd="@dimen/size_16sp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:gravity="center"
                            android:padding="@dimen/size_10sp"
                            android:src="@drawable/ic_filter_gray"
                            android:visibility="visible"
                            app:layout_constraintEnd_toStartOf="@+id/tv_sort_by"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/color_817EB1" />

                        <ImageView
                            android:id="@+id/tv_sort_by"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:padding="@dimen/size_10sp"
                            android:src="@drawable/ic_sort"
                            app:layout_constraintEnd_toStartOf="@+id/tv_search"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/color_817EB1" />

                        <ImageView
                            android:id="@+id/tv_search"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:padding="@dimen/size_10sp"
                            android:src="@drawable/ic_search"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/color_817EB1" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_filter_count"
                            android:layout_width="@dimen/size_18sp"
                            android:layout_height="@dimen/size_18sp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_red_gradient"
                            android:backgroundTint="@color/payment_rejected_text_color"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingTop="@dimen/dimen_1dp"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:translationX="@dimen/dimen_4dp"
                            android:translationY="-10dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@+id/tv_filter"
                            app:layout_constraintTop_toTopOf="@+id/tv_filter" />

                        <EditText
                            android:id="@+id/et_search"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_white_with_stroke_background"
                            android:drawableStart="@mipmap/ic_search"
                            android:drawablePadding="@dimen/size_10sp"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/et_search_staff"
                            android:imeOptions="actionSearch"
                            android:paddingStart="@dimen/size_16sp"
                            android:paddingTop="@dimen/size_10sp"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_8dp"
                            android:paddingEnd="@dimen/dimen_50dp"
                            android:paddingBottom="@dimen/size_10sp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/beat_hint_color"
                            android:textSize="@dimen/size_14sp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_filter_range"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_filter_range"/>

                        <ImageView
                            android:id="@+id/iv_clear_search"
                            android:layout_width="@dimen/size_24sp"
                            android:layout_height="@dimen/size_24sp"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/size_12sp"
                            android:background="@drawable/circle_blue_gradient"
                            android:padding="@dimen/dimen_8dp"
                            android:src="@drawable/ic_close"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/et_search"
                            app:layout_constraintEnd_toEndOf="@+id/et_search"
                            app:layout_constraintTop_toTopOf="@+id/et_search"
                            app:tint="@color/white" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_team_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_12sp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dimen_50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>