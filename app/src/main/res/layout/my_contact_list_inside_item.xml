<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:background="@android:color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/rl_phone"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7">

                        <ImageView
                            android:id="@+id/img_phone"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:id="@+id/txt_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/img_phone"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingTop="@dimen/dimen_2dp"
                            android:text="9898989898"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_email"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3">

                        <ImageView
                            android:id="@+id/img_email"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:src="@drawable/ic_email" />

                        <TextView
                            android:id="@+id/txt_contact_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/img_email"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingTop="@dimen/dimen_2dp"
                            android:text="aspaitm@gmail.com"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_telephone"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:src="@drawable/ic_telephone" />

                    <TextView
                        android:id="@+id/txt_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img_telephone"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingTop="@dimen/dimen_2dp"
                        android:text="1222222"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>