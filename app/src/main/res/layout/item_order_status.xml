<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4dp"
    android:background="@drawable/edit_text_white_with_stroke_background"
    android:padding="@dimen/dimen_5dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:padding="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:src="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_radio_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:src="@drawable/ic_radio_button_not_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginBottom="@dimen/dimen_2dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="@dimen/dimen_2dp"
        android:text="asdfgn sdg"
        android:textColor="@color/leve_text_color"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/iv_radio_button" />
</androidx.constraintlayout.widget.ConstraintLayout>

