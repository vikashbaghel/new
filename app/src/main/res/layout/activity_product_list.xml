<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    tools:context=".sales.product.ProductListActivity">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dimen_12dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:tint="@color/black" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:text="@string/products"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toStartOf="@+id/iv_search"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />


    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_weight="0.5"
        android:padding="@dimen/dimen_12dp"
        android:paddingStart="@dimen/size_16sp"
        android:paddingEnd="@dimen/size_16sp"
        android:src="@mipmap/ic_search"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toStartOf="@+id/tv_clear_filter"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <TextView
        android:id="@+id/tv_clear_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/size_12sp"
        android:paddingTop="@dimen/size_10sp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/size_10sp"
        android:text="@string/clear_filter_under_line"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_search" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_brand_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/product_filter_drop_down_background"
        android:elevation="@dimen/dimen_2dp"
        android:outlineSpotShadowColor="@color/grey"
        android:translationY="-20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_brand_filter"
        app:layout_constraintStart_toStartOf="@+id/tv_brand_filter"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter"
        tools:ignore="UnusedAttribute">


        <EditText
            android:id="@+id/et_search_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:background="@drawable/network_search_edit_text_style"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_brand"
            android:imeOptions="actionSearch"
            android:paddingStart="30dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_40dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:singleLine="true"
            android:textColorHint="#6A6A6A"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_search_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="@dimen/size_10sp"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_6dp"
            android:src="@mipmap/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_brand"
            app:layout_constraintStart_toStartOf="@+id/et_search_brand"
            app:layout_constraintTop_toTopOf="@+id/et_search_brand" />

        <ImageView
            android:id="@+id/iv_clear_search_brand"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_10sp"
            android:background="@drawable/circle_blue_gradient"
            android:padding="@dimen/dimen_6dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_brand"
            app:layout_constraintEnd_toEndOf="@+id/et_search_brand"
            app:layout_constraintTop_toTopOf="@+id/et_search_brand"
            app:tint="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_brand_filter_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10sp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/size_16sp"
            android:scrollIndicators="end"
            android:scrollbarSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_brand" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_brand_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:background="@drawable/product_filter_background"
        android:elevation="@dimen/dimen_2dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingTop="@dimen/dimen_6dp"
        android:textSize="@dimen/size_14sp"
        android:paddingEnd="@dimen/size_10sp"
        android:paddingBottom="@dimen/dimen_6dp"
        android:text="@string/brand"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/drop_down_drawable_tint"
        app:layout_constraintEnd_toStartOf="@+id/tv_category_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/product_filter_drop_down_background"
        android:elevation="@dimen/dimen_2dp"
        android:outlineSpotShadowColor="@color/grey"
        android:translationY="-20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_category_filter"
        app:layout_constraintStart_toStartOf="@+id/tv_category_filter"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_filter"
        tools:ignore="UnusedAttribute">


        <EditText
            android:id="@+id/et_search_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:background="@drawable/network_search_edit_text_style"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_category"
            android:imeOptions="actionSearch"
            android:paddingStart="30dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_40dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:singleLine="true"
            android:textColorHint="#6A6A6A"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_search_product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="@dimen/size_10sp"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_6dp"
            android:src="@mipmap/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_category"
            app:layout_constraintStart_toStartOf="@+id/et_search_category"
            app:layout_constraintTop_toTopOf="@+id/et_search_category" />

        <ImageView
            android:id="@+id/iv_clear_search_category"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_10sp"
            android:background="@drawable/circle_blue_gradient"
            android:padding="@dimen/dimen_6dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_category"
            app:layout_constraintEnd_toEndOf="@+id/et_search_category"
            app:layout_constraintTop_toTopOf="@+id/et_search_category"
            app:tint="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10sp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/size_16sp"
            android:scrollIndicators="end"
            android:scrollbarSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_category_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/product_filter_background"
        android:elevation="@dimen/dimen_2dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingTop="@dimen/dimen_6dp"
        android:textSize="@dimen/size_14sp"
        android:paddingEnd="@dimen/size_10sp"
        android:paddingBottom="@dimen/dimen_6dp"
        android:text="@string/category"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/drop_down_drawable_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_brand_filter"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter"
        app:shimmer_auto_start="true"
        app:shimmer_direction="left_to_right"
        app:shimmer_repeat_mode="restart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_item_product" />

            <include layout="@layout/shimmer_item_product" />

            <include layout="@layout/shimmer_item_product" />

            <include layout="@layout/shimmer_item_product" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingStart="@dimen/size_10sp"
        android:paddingEnd="@dimen/size_10sp"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_empty_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_add"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter">

        <ImageView
            android:id="@+id/iv_empty_data"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_empty_data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/please_try_another_keyword"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_empty_data" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/size_14sp"
        android:layout_marginTop="@dimen/size_14sp"
        android:layout_marginEnd="@dimen/size_14sp"
        android:layout_marginBottom="@dimen/size_14sp"
        android:src="@drawable/ic_add_white"
        android:text="@string/product"
        android:textSize="@dimen/size_14sp"
        android:textColor="@color/white"
        android:visibility="visible"
        app:backgroundTint="#312B81"
        app:icon="@mipmap/ic_add_staff"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>