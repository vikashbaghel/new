<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border_linear_rounded_gradient"
            android:elevation="5dp">

            <com.app.rupyz.generic.custom.VerticalTextView
                android:id="@+id/tv_customer_level"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:background="@drawable/order_close_background"
                android:backgroundTint="@color/black"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:lines="1"
                android:padding="@dimen/dimen_8dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_11sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_customer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toBottomOf="@+id/tv_location"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12sp"
                android:layout_marginTop="11dp"
                android:background="@color/order_gray"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14sp"
                android:layout_marginEnd="@dimen/dimen_40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10sp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="@dimen/dimen_100dp"
                android:drawablePadding="@dimen/dimen_9dp"
                android:background="@color/order_gray"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/size_10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

            <TextView
                android:id="@+id/tv_authorize_person_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/size_20sp"
                android:drawablePadding="@dimen/dimen_9dp"
                android:background="@color/order_gray"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_customer"
                app:layout_constraintTop_toTopOf="@+id/iv_customer"/>


            <TextView
                android:id="@+id/tv_parent_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10sp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/size_20sp"
                android:drawablePadding="@dimen/dimen_9dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/parent_customer_name_color"
                android:textSize="@dimen/size_12sp"
                android:background="@color/order_gray"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_customer"
                app:layout_constraintBottom_toBottomOf="@+id/iv_customer"
                app:layout_constraintTop_toBottomOf="@+id/tv_authorize_person_name" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:background="@color/order_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toBottomOf="@+id/iv_customer" />


            <TextView
                android:id="@+id/tv_new_order"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_15sp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/size_16sp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:background="@color/order_gray"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:lines="2"
                android:paddingStart="@dimen/size_20sp"
                android:paddingEnd="@dimen/size_24sp"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/tv_record_activity"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10sp"
                android:layout_marginEnd="@dimen/size_10sp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:lines="2"
                android:background="@color/order_gray"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:textColor="@color/toogle_color"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>