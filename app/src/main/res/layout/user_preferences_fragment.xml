<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/size_18sp"
    android:paddingEnd="@dimen/size_18sp"
    android:background="@drawable/profile_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_push_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:background="@drawable/cart_item_bg"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/size_15sp"
            android:padding="@dimen/dimen_4dp"
            android:src="@drawable/ic_bell"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FF322E80" />

        <TextView
            android:id="@+id/tv_mapping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_weight="9"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/notifications"
            android:textColor="#000000"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintTop_toTopOf="@+id/iv_notification"
            app:layout_constraintBottom_toBottomOf="@+id/iv_notification"
            app:layout_constraintStart_toEndOf="@+id/iv_notification"/>

        <TextView
            android:id="@+id/tv_push_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_10sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:layout_weight="9"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/notification_message"
            android:textColor="#888888"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mapping" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_notification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mapping"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mapping"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_offline_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15sp"
        android:background="@drawable/cart_item_bg"
        android:paddingTop="@dimen/dimen_15dp"
        android:visibility="gone"
        android:paddingBottom="@dimen/dimen_15dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_push_notification">

        <ImageView
            android:id="@+id/iv_offline"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/size_15sp"
            android:padding="@dimen/dimen_4dp"
            android:src="@drawable/ic_offline_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FF322E80" />

        <TextView
            android:id="@+id/tv_offline_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10sp"
            android:layout_weight="9"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/offline_mode"
            android:textColor="#000000"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_offline"
            app:layout_constraintStart_toEndOf="@+id/iv_offline"
            app:layout_constraintTop_toTopOf="@+id/iv_offline" />

        <TextView
            android:id="@+id/tv_offline_mode_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_10sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:layout_weight="9"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/offline_mode_message"
            android:textColor="#888888"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_offline" />

        <TextView
            android:id="@+id/tv_offline_mode_sub_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:layout_weight="9"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/offline_mode_sub_message"
            android:textColor="#888888"
            android:textSize="@dimen/size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_offline_mode_msg" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_offline_mode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_offline_mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_offline_mode" />

        <TextView
            android:id="@+id/tv_view_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_16sp"
            android:layout_marginEnd="@dimen/size_16sp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/view_status"
            android:textColor="@color/red"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_4dp"
            android:textSize="@dimen/dimen_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_offline_mode_sub_msg"
            app:drawableEndCompat="@drawable/ic_arrow_right"
            app:drawableTint="@color/red" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>