<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B082F"
    tools:context=".ui.equifax.fragment.debtprofile.EquiFaxIndividualDebtProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/debt_search_edit_text_style"
                android:gravity="center|left"
                android:visibility="gone"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_40dp"
                    android:background="@drawable/edit_text_inner_style"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Search by any parametersâ€¦"
                    android:inputType="phone"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/size_12sp" />

                <ImageView
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@mipmap/ic_search" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:background="@drawable/debt_search_edit_text_style"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_25dp"
                            android:layout_height="@dimen/dimen_25dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:src="@mipmap/ic_filter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Filter"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14sp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:background="@drawable/debt_search_edit_text_style"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_25dp"
                            android:layout_height="@dimen/dimen_25dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:src="@mipmap/ic_sort" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Sort"
                            android:textColor="@color/black" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/rootLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:background="@drawable/home_card_round_background"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/txt_subscriber_name"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="@dimen/dimen_5dp"
                                    android:layout_weight="7.5"
                                    android:fontFamily="@font/poppins_bold"
                                    android:maxLines="1"
                                    android:text="Active Loan Summary-"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_16sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Total Sanction: "
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/size_12sp" />

                                        <TextView
                                            android:id="@+id/txt_sanction_amount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="2dp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/size_12sp" />


                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_sanction_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                style="@style/CustomProgressBarHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10sp"
                                android:layout_below="@+id/imageView"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:indeterminate="false" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Paid"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                    <TextView
                                        android:id="@+id/txt_paid_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Balance"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                    <TextView
                                        android:id="@+id/txt_balance_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Total Loan"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/size_12sp" />

                                        <TextView
                                            android:id="@+id/txt_total_loan"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/size_12sp" />

                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Non Fund"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/size_12sp" />

                                        <TextView
                                            android:id="@+id/txt_non_fund"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/size_12sp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Overdue"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                    <TextView
                                        android:id="@+id/txt_overdue_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Total EMI"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                    <TextView
                                        android:id="@+id/txt_total_emi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Loan Taken In Last 6 Month-"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_12sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:orientation="horizontal"
                                android:weightSum="9">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Number"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Outstanding"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="EMI"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:text="Loan Getting Close In Next 6 Month-"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_12sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:orientation="horizontal"
                                android:weightSum="9">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Number"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Outstanding"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="EMI"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_12sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/active_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:background="@drawable/debt_search_edit_text_style">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Active Loan Account"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_14sp" />

                        <ImageButton
                            android:id="@+id/btn_active_loan_summary"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            app:tint="@color/white"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:src="@mipmap/ic_expand" />

                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/close_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:background="@drawable/debt_search_edit_text_style">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Closed Loan Account"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_14sp" />

                        <ImageButton
                            android:id="@+id/btn_close_loan_summary"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            app:tint="@color/white"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:src="@mipmap/ic_expand" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>