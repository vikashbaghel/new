<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_10dp"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    app:cardElevation="@dimen/dimen_6dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:strokeWidth="@dimen/dimen_1_5dp"
    android:translationZ="5dp"
    android:outlineSpotShadowColor="@color/color_000000"
    android:outlineAmbientShadowColor="@color/color_000000"
    app:strokeColor="@color/white"
    android:elevation="5dp"
    app:cardForegroundColor="@color/transparent"
    app:cardBackgroundColor="#F0ECEC"
    tools:ignore="UnusedAttribute">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_0dp"
        android:layout_margin="@dimen/dimen_0dp"
        android:background="@drawable/white_border_linear_gradient_without_stroke"
        >


        <com.app.rupyz.generic.custom.VerticalTextView
            android:id="@+id/tv_customer_level"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0dp"
            android:background="@drawable/business_banner_background_orange"
            android:ellipsize="marquee"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:lines="1"
            android:minWidth="@dimen/dimen_24dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="@dimen/size_18sp"
            android:padding="@dimen/dimen_5dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_customer"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginVertical="@dimen/dimen_16dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_no_customer_found"
            app:layout_constraintStart_toEndOf="@+id/tv_customer_level"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset" />


        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:lineHeight="@dimen/size_24sp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/size_16sp"
            android:textColor="@color/color_000000"
            android:maxLines="2"
            android:background="@color/transparent"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            app:layout_constraintTop_toTopOf="@+id/iv_customer"
            app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
            app:layout_constraintBottom_toTopOf="@+id/tv_authorize_person_name"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            />

        <TextView
            android:id="@+id/tv_authorize_person_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:lineHeight="@dimen/size_18sp"
            android:lines="1"
            android:text="dsn jk"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tv_location"
            app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            />



        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/size_10sp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:drawablePadding="@dimen/dimen_9dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:lines="1"
            android:textColor="@color/color_312B81"
            android:drawableStart="@drawable/ic_setting_location_small"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            android:text="Location"
            app:layout_constraintEnd_toStartOf="@+id/iv_phone_call"
            app:layout_constraintStart_toEndOf="@+id/iv_customer"
            app:layout_constraintBottom_toBottomOf="@+id/iv_customer" />


        <ImageView
            android:id="@+id/iv_phone_call"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginEnd="@dimen/dimen_18dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_order_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_customer"
            app:tint="@color/color_6B679F" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>