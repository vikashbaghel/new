<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    tools:context=".ui.calculator.calculator_detail.CalculatorDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/white"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/img_back"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_width="wrap_content"
                    app:tint="@color/black"
                    android:layout_height="20dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/size_16sp"
                    android:text="Calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#29000000"
                    android:shadowDx="0"
                    android:shadowDy="3"
                    android:shadowRadius="2"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/home_card_round_background"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/lenderPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/dimen_15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_20dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/total_interest_view"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#69B9DD"
                            android:rotation="45" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/total_interest_view"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Total Interest"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_interest_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/principal_view"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#9263EA"
                            android:rotation="45" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/principal_view"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Principal Amount"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_principle_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/other_view"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#9CCE2D"
                            android:rotation="45" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/other_view"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Other Charges"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_other_charge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/view5"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#c0c0c0"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/view5"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Total Amount"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_total_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/view10"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#c0c0c0"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/view10"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Interest Rate"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_total_interest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#c0c0c0"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/view3"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Effective Interest Rate"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_effective_rate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#c0c0c0"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/view4"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="EMI"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_monthly_emi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_Deposit"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/view6"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#c0c0c0"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/view6"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Deposit"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_deposit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/view7"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#c0c0c0"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/rl_maturity"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/view7"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Maturity Value"
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/calculator_header_text_size" />

                            <TextView
                                android:id="@+id/txv_maturity_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text=""
                                android:textAlignment="textStart"
                                android:textColor="@color/calculator_level_text_color"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_amortization"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gredient"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="@dimen/dimen_40dp"
                    android:paddingEnd="@dimen/dimen_40dp"
                    android:text="@string/view_amortization"
                    android:textAllCaps="false"
                    android:textSize="@dimen/size_14sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>