<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_10dp"
    app:cardElevation="@dimen/dimen_2dp"
    android:layout_marginStart="@dimen/dimen_10dp"
    android:layout_marginEnd="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/white"
    app:cardPreventCornerOverlap="true"
    app:strokeWidth="@dimen/dimen_1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border_linear_gradient"
        android:paddingBottom="@dimen/dimen_16dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginStart="@dimen/size_14sp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:src="@mipmap/no_photo_available"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent.5dpInset"
            app:strokeColor="@color/expense_divider"
            app:strokeWidth="@dimen/dimen_1dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_staff_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Staff name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_staff_check_in_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:drawableStart="@drawable/ic_arrow_cool_down"
            android:drawablePadding="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="--:--"
            android:textColor="@color/filter_proceed_green"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/tv_staff_check_out_time"
            app:layout_constraintStart_toStartOf="@+id/tv_staff_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_staff_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_staff_check_out_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:drawableStart="@drawable/ic_arrow_cool_up"
            android:drawablePadding="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="--:--"
            android:textColor="@color/out_of_stock_red"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/tv_staff_total_checked_in_time"
            app:layout_constraintStart_toEndOf="@+id/tv_staff_check_in_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_staff_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_staff_total_checked_in_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:drawableStart="@drawable/ic_total_time"
            android:drawablePadding="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/filter_proceed_green"
            android:textSize="@dimen/size_12sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_staff_check_out_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_staff_name" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_activity_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_16sp"
            android:drawableStart="@drawable/ic_customer_new_order"
            android:drawablePadding="@dimen/dimen_6dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/sales_heading_blue"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/tv_order_value"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_16sp"
            android:drawableStart="@drawable/ic_order_value"
            android:drawablePadding="@dimen/dimen_6dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/sales_heading_blue"
            android:textSize="@dimen/size_12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_activity_type"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/size_18sp"
            android:drawablePadding="@dimen/dimen_9dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/lead_location_gray"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_map_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_type" />

        <ImageView
            android:id="@+id/iv_map_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_18sp"
            android:src="@drawable/ic_lead_location"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_location"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_location, iv_map_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/size_18sp"
            android:drawablePadding="@dimen/dimen_9dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>