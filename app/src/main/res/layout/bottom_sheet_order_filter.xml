<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cl_filter"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:padding="@dimen/size_16sp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/hd_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/filters"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />

    <TextView
        android:id="@+id/hd_customer_level_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/fulfilled_by"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/tv_parent_customer_name"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/size_16sp"
        android:paddingEnd="50dp"
        android:singleLine="true"
        android:text="@string/select_customer_name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintTop_toBottomOf="@+id/hd_customer_level_parent" />

    <ImageView
        android:id="@+id/iv_clear_customer"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginEnd="12dp"
        android:padding="@dimen/dimen_2dp"
        android:rotation="45"
        android:src="@drawable/nav_add"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_parent_customer_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_parent_customer_name"
        app:layout_constraintTop_toTopOf="@+id/tv_parent_customer_name"
        app:tint="@color/lead_add_blue" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_customer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:elevation="@dimen/size_10sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_parent_customer_name">

        <EditText
            android:id="@+id/et_search_customer"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/size_12sp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:background="@drawable/network_search_edit_text_style"
            android:drawableStart="@mipmap/ic_search"
            android:drawablePadding="@dimen/dimen_20dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_customer"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="@dimen/dimen_50dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_clear_search"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:padding="@dimen/dimen_2dp"
            android:rotation="45"
            android:src="@drawable/nav_add"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_customer"
            app:layout_constraintEnd_toEndOf="@+id/et_search_customer"
            app:layout_constraintTop_toTopOf="@+id/et_search_customer"
            app:tint="@color/lead_add_blue" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_customer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimen_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="200dp"
            app:layout_constraintTop_toBottomOf="@+id/et_search_customer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/tv_parent_customer_name" />

    <TextView
        android:id="@+id/hd_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/status"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_12sp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:paddingStart="1dp"
        android:paddingEnd="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/hd_status" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="rv_status, hd_status, view2" />


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/rv_status" />


    <TextView
        android:id="@+id/hd_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/order_placed_to"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_customer_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_12sp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingStart="1dp"
        android:paddingEnd="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/hd_level" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:background="@drawable/border_gray"
        android:elevation="@dimen/size_10sp"
        android:textSize="@dimen/size_16sp"
        android:text="@string/clear_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_proceed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_customer_type" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_proceed"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/filter_proceed_green"
        android:elevation="@dimen/size_10sp"
        android:text="@string/confirm"
        android:textSize="@dimen/size_16sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>