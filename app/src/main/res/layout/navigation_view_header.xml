<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_header_bg_color"
    android:gravity="center"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nav_header_view"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_user_prefix"
            android:layout_width="40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16sp"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:background="@drawable/profile_name_bg_style"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_3dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="22dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6dp"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down_black"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_user_prefix"
            android:layout_marginEnd="@dimen/size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_prefix"
            app:layout_constraintTop_toTopOf="@+id/tv_user_prefix" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_org_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:background="@color/white"
        android:elevation="@dimen/dimen_10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cl_header_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_org_list"
            android:layout_width="match_parent"
            app:layout_constraintHeight_max="400dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_join_new_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@+id/rv_org_list">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/join_new_organization"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_add_new_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/dimen_2dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_join_new_org">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/add_new_organization"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_add_new_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/dimen_2dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_add_new_org">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/add_new_admin"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_header_view">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_40dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/ll_my_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@mipmap/ic_user_default_header" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/profile"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_picture_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/gallery_thumbnail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/picture_gallery"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_my_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_my_business" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/bottom_nav_my_business"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_share_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic__share_app" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/share_app"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_rate_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_awesome_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/rate_app"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_terms_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_term_and_condition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/terms_amp_conditions"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_privacy_policy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/privacy_policy"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/nav_settings"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_profile_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/profile_settings"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_report_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/report_setting"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_weight="9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/more"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/size_16sp"
                    android:paddingTop="12dp"
                    android:paddingEnd="@dimen/size_16sp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="@dimen/size_16sp"
                        android:layout_height="@dimen/size_16sp"
                        android:src="@drawable/ic_log_out" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_weight="9"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/nav_logout"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_14sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:padding="@dimen/dimen_5dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_powered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/powered_by"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/size_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="@dimen/size_16sp"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:src="@mipmap/ic_rupyz_logo_header"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_powered_by"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
