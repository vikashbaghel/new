<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context=".sales.orders.CreateNewOrderForCustomerActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10sp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12sp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="@color/analytics_view_drop_shadow_color"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/create_order"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_qr_code_scanner"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <ImageView
        android:id="@+id/iv_qr_code_scanner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/size_13sp"
        android:src="@drawable/qr_code_scanner"
        app:layout_constraintEnd_toStartOf="@+id/iv_cart"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:padding="@dimen/size_12sp"
        android:src="@drawable/ic_cart"
        app:layout_constraintEnd_toStartOf="@+id/tv_clear_filter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cart_item_count"
        android:layout_width="@dimen/size_15sp"
        android:layout_height="@dimen/size_15sp"
        android:layout_margin="4dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_cart"
        app:layout_constraintTop_toTopOf="@+id/iv_cart" />

    <TextView
        android:id="@+id/tv_clear_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/size_12sp"
        android:paddingTop="@dimen/size_10sp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/size_10sp"
        android:text="@string/clear_filter_under_line"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cart" />


    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/et_search_for_product"
        android:imeOptions="actionSearch"
        android:paddingStart="16dp"
        android:drawablePadding="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:drawableStart="@mipmap/ic_search"
        android:paddingEnd="@dimen/dimen_50dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:singleLine="true"
        android:textColorHint="@color/beat_hint_color"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_toolbar_title" />

    <ImageView
        android:id="@+id/iv_clear_search"
        android:layout_width="@dimen/size_24sp"
        android:layout_height="@dimen/size_24sp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/size_12sp"
        android:background="@drawable/circle_blue_gradient"
        android:padding="@dimen/dimen_8dp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:tint="@color/white" />


    <TextView
        android:id="@+id/tv_brand_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginEnd="@dimen/size_10sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/size_10sp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/size_10sp"
        android:text="@string/brand"
        android:textSize="@dimen/size_14sp"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/drop_down_drawable_tint"
        app:layout_constraintEnd_toStartOf="@+id/tv_category_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <TextView
        android:id="@+id/tv_category_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/edit_text_white_with_stroke_background"
        android:layout_marginTop="@dimen/size_10sp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/size_10sp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:textSize="@dimen/size_14sp"
        android:text="@string/category"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/drop_down_drawable_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_brand_filter"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter"
        app:shimmer_auto_start="true"
        app:shimmer_direction="left_to_right"
        app:shimmer_repeat_mode="restart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_12sp"
            android:paddingEnd="@dimen/size_12sp">

            <include layout="@layout/shimmer_item_product" />

            <include layout="@layout/shimmer_item_product" />

            <include layout="@layout/shimmer_item_product" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="@dimen/size_12sp"
        android:paddingEnd="@dimen/size_12sp"
        android:paddingBottom="@dimen/size_24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category_filter"
        android:layout_width="0dp"
        android:elevation="@dimen/dimen_2dp"
        android:layout_height="wrap_content"
        android:background="@drawable/product_filter_drop_down_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_category_filter"
        app:layout_constraintStart_toStartOf="@+id/tv_category_filter"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_filter">


        <EditText
            android:id="@+id/et_search_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:background="@drawable/network_search_edit_text_style"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_category"
            android:imeOptions="actionSearch"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_40dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableStart="@mipmap/ic_search"
            android:paddingBottom="@dimen/dimen_8dp"
            android:singleLine="true"
            android:textColorHint="#6A6A6A"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_clear_search_category"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_10sp"
            android:background="@drawable/circle_blue_gradient"
            android:padding="@dimen/dimen_6dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_category"
            app:layout_constraintEnd_toEndOf="@+id/et_search_category"
            app:layout_constraintTop_toTopOf="@+id/et_search_category"
            app:tint="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10sp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/size_16sp"
            android:scrollIndicators="end"
            android:scrollbarSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_brand_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/product_filter_drop_down_background"
        android:elevation="@dimen/dimen_2dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tv_brand_filter"
        app:layout_constraintStart_toStartOf="@+id/tv_brand_filter"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter">


        <EditText
            android:id="@+id/et_search_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:background="@drawable/network_search_edit_text_style"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/et_search_brand"
            android:imeOptions="actionSearch"
            android:paddingStart="10dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_40dp"
            android:drawableStart="@mipmap/ic_search"
            android:paddingBottom="@dimen/dimen_8dp"
            android:singleLine="true"
            android:textColorHint="#6A6A6A"
            android:textSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_clear_search_brand"
            android:layout_width="@dimen/size_18sp"
            android:layout_height="@dimen/size_18sp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_10sp"
            android:background="@drawable/circle_blue_gradient"
            android:padding="@dimen/dimen_6dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_brand"
            app:layout_constraintEnd_toEndOf="@+id/et_search_brand"
            app:layout_constraintTop_toTopOf="@+id/et_search_brand"
            app:tint="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_brand_filter_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10sp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/size_16sp"
            android:scrollIndicators="end"
            android:scrollbarSize="@dimen/size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_brand" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/please_try_another_keyword"
        android:textColor="@color/theme_purple"
        android:textSize="@dimen/size_14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_filter" />

    <ProgressBar
        android:id="@+id/pagination_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:padding="@dimen/dimen_20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_product_item">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/btn_rectangle_bg_bg"
            android:backgroundTint="#2DAD33"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="@dimen/dimen_40dp"
            android:paddingEnd="@dimen/dimen_40dp"
            android:text="@string/str_continue"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            app:layout_constraintTop_toTopOf="parent"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/btn_rectangle_bg_bg"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="@dimen/dimen_40dp"
            android:paddingEnd="@dimen/dimen_40dp"
            android:text="@string/back"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_add"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>