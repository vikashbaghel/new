<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_10sp"
        android:layout_marginEnd="@dimen/size_16sp"
        android:background="@drawable/white_border_linear_rounded_gradient"
        android:paddingStart="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingTop="@dimen/size_12sp"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10sp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:paddingStart="@dimen/size_16sp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_goal_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12sp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/goals"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_title" />


        <CheckBox
            android:id="@+id/cb_sales_amount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="5"
            android:text="@string/sales_amount"
            android:padding="@dimen/size_12sp"
            app:layout_constraintEnd_toStartOf="@+id/et_payment_amount"
            android:layout_marginTop="@dimen/size_10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_goal_list"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/et_payment_amount"
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:layout_constraintHorizontal_weight="6"
            android:background="@drawable/edit_text_white_with_stroke_background"
            android:fontFamily="@font/roboto_medium"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size_16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/cb_sales_amount"
            app:layout_constraintBottom_toBottomOf="@+id/cb_sales_amount"
            app:layout_constraintStart_toEndOf="@+id/cb_sales_amount"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>