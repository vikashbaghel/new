<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_style"
    tools:context=".ui.individual.ProfileReviewActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_50dp"
                    android:src="@mipmap/ic_rupyz_white_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@drawable/walkthrough_bg_style"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Enter Your Name and Email ID"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp" />

                    <View
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/short_line_style" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Name*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="text"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Email*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/edit_text_style"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp">


                        <EditText
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/edit_text_inner_style"
                            android:fontFamily="@font/poppins_regular"
                            android:hint=""
                            android:inputType="textEmailAddress"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="@dimen/size_16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/chb_consent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/experian_consent"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="8sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_terms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@string/experian_consent_model"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_next"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:background="@drawable/check_score_button_style"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/next"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16sp" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>