<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverViewActivity">
    
    <LinearLayout
        android:id="@+id/ownership_mix_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/home_card_style"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_20dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Ownership Mix"
                android:textColor="@color/loans_color"
                android:textSize="@dimen/size_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center">

                <View
                    android:layout_width="7dp"
                    android:layout_height="9dp"
                    android:background="@color/private_bank_circle_color" />

                <TextView
                    android:id="@+id/txt_individual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Individual"
                    android:textColor="@color/loans_color"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="center">

                <View
                    android:layout_width="7dp"
                    android:layout_height="9dp"
                    android:background="@color/psu_bank_circle_color" />


                <TextView
                    android:id="@+id/txt_joint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Joint/Guarantor"
                    android:textColor="@color/loans_color"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="5">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/ownershipPieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>