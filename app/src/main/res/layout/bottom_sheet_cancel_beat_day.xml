<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:padding="@dimen/size_16sp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/hd_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/cancel_date_with_hyfon"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_back"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/parent_customer_name_color"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/hd_report"
        app:layout_constraintStart_toEndOf="@+id/hd_report"
        app:layout_constraintTop_toTopOf="@+id/hd_report" />


    <TextView
        android:id="@+id/tv_cancel_message"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_back"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:text="@string/once_cancelled_it_cannot_be_edit_again"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:textColor="@color/parent_customer_name_color"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintStart_toStartOf="@+id/hd_report"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/tv_cancel_message" />

    <EditText
        android:id="@+id/et_comment"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:background="@drawable/add_product_edit_text_bg"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:gravity="top"
        android:lines="3"
        android:textSize="@dimen/size_13sp"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/border_gray"
        android:text="@string/back"
        android:elevation="@dimen/size_10sp"
        android:layout_marginTop="@dimen/size_20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_proceed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_comment" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_proceed"
        android:layout_width="0dp"
        android:elevation="@dimen/size_10sp"
        android:layout_height="54dp"
        android:background="@color/filter_proceed_green"
        android:text="@string/str_continue"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>