<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_12sp"
    android:background="@drawable/white_border_linear_rounded_gradient">

    <com.app.rupyz.generic.custom.VerticalTextView
        android:id="@+id/tv_active_status"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/active_beat_plan_background"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/dimen_5dp"
        android:text="@string/active"
        android:textColor="@color/payment_approved_text_color"
        android:textSize="9dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_user"
        android:layout_width="@dimen/size_22sp"
        android:layout_height="@dimen/size_22sp"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/size_16sp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/profile_name_bg_style"
        android:elevation="@dimen/dimen_2dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_user_default"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10sp"
        android:layout_marginTop="@dimen/size_20sp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/name_without_star"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iv_more_info"
        app:layout_constraintStart_toEndOf="@+id/iv_user"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_beat"
        android:layout_width="@dimen/size_20sp"
        android:layout_height="@dimen/size_20sp"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:src="@drawable/ic_beat_plan_tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
        app:layout_goneMarginTop="@dimen/size_16sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10sp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:text="@string/name_without_star"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_beat"
        app:layout_constraintEnd_toStartOf="@+id/iv_more_info"
        app:layout_constraintStart_toEndOf="@+id/iv_beat"
        app:layout_constraintTop_toTopOf="@+id/iv_beat" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/size_18sp"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/name_without_star"
        android:textColor="@color/order_date_color"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_beat_status"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_beat_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:textColor="@color/sale_overview_view_all"
        android:textSize="@dimen/size_10sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_rejected_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/size_12sp"
        android:layout_marginBottom="@dimen/size_18sp"
        android:background="@drawable/payement_rejected_comment_bg"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:text="@string/name_without_star"
        android:textColor="@color/expense_reject_red"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <ImageView
        android:id="@+id/iv_more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/size_18sp"
        android:paddingTop="@dimen/size_10sp"
        android:paddingEnd="@dimen/size_18sp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:src="@drawable/ic_icon_ionic_ios_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>