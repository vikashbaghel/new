<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingEnd="@dimen/size_16sp"
    android:paddingStart="1dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/dimen_1dp"
        android:elevation="0dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/business_banner_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/dimen_6dp"
        android:background="@drawable/white_circle_bg_style"
        android:elevation="@dimen/size_10sp"
        android:padding="@dimen/dimen_5dp"
        android:src="@drawable/ic_delete"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/cv_image"
        app:layout_constraintTop_toTopOf="@+id/cv_image" />

</androidx.constraintlayout.widget.ConstraintLayout>