<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:padding="@dimen/size_16sp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/hd_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/discount_with_max_value"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />


    <EditText
        android:id="@+id/et_discount_key"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/size_12sp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/add_product_edit_text_bg"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:hint="@string/enter_discount_name"
        android:maxLines="1"
        android:paddingStart="@dimen/size_12sp"
        android:paddingEnd="@dimen/size_12sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/text_color_grey"
        android:textSize="@dimen/dimen_15dp"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <EditText
        android:id="@+id/et_discount_value"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/add_product_edit_text_bg"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:minLines="1"
        android:paddingStart="@dimen/size_12sp"
        android:paddingEnd="@dimen/size_12sp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_color_grey"
        android:textSize="@dimen/dimen_15dp"
        app:layout_constraintEnd_toStartOf="@+id/rg_discount_type"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_discount_key" />

    <RadioGroup
        android:id="@+id/rg_discount_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/et_discount_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/et_discount_value"
        app:layout_constraintTop_toTopOf="@+id/et_discount_value">

        <RadioButton
            android:id="@+id/rb_rupees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/rupee_symbol" />


        <RadioButton
            android:id="@+id/rb_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:text="@string/percentage_symbol" />
    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@drawable/border_gray"
        android:elevation="@dimen/size_10sp"
        android:text="@string/cancel"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_proceed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_discount_value" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_proceed"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/filter_proceed_green"
        android:elevation="@dimen/size_10sp"
        android:text="@string/add"
        android:textSize="@dimen/size_16sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>